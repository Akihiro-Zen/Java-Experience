{
  "namespace": "book",

  "book_screen@common_mcjava.base_screen": {
    "$close_on_player_hurt|default": true,
    "close_on_player_hurt": "$close_on_player_hurt",
    "button_mappings": [
      {
        "from_button_id": "button.menu_exit",
        "to_button_id": "button.book_exit",
        "mapping_type": "global"
      },
      {
        "from_button_id": "button.menu_cancel",
        "to_button_id": "button.book_exit",
        "mapping_type": "global"
      },
      {
        "from_button_id": "button.menu_tab_left",
        "to_button_id": "button.prev_page",
        "mapping_type": "global"
      },
      {
        "from_button_id": "button.menu_tab_right",
        "to_button_id": "button.next_page",
        "mapping_type": "global"
      }
    ],
    "$screen_content": "book_mcjava.book_screen_content_panel",
    "force_render_below": "$activate_force_render_below"
  }
}