{
  "namespace": "radio_button_mcjava",

  "radio_button": {
    "type": "panel",
    "size": [270, 18],
    "$radio_button_label|default": "",
    "controls": [
      {
        "base@option_toggle_mcjava.toggle_base": {
          "variables": [
            {
              "requires": "(not $option_enabled_binding_name or not $enabled)",
              "$toggle_enabled_binding_name": "#not_data_bound",
              "$toggle_enabled_binding_type": "none"
            }
          ],
          "$option_enabled_binding_name|default": "",
          "toggle_name": "$radio_button_name",
          "$toggle_enabled_binding_type": "global",
          "$toggle_group": true,
          "$radio_state|default": "",
          "$radio_button_name|default": "$toggle_state_binding_name",
          "$unchecked_background|default": "",
          "$checked_background|default": "resources_mcjava.text_box_default",
          "$unchecked_hover_background|default": "resources_mcjava.text_box_hover",
          "$checked_hover_background|default": "resources_mcjava.text_box_hover",
          "$unchecked_locked_background|default": "",
          "$checked_locked_background|default": "resources_mcjava.text_box_default",
          "$content|default": "radio_button_mcjava.radio_button_label",
          "enabled": "$enabled",
          "$enabled|default": true,
          "controls": [
            {
              "unchecked@state_base": {
                "$background": "$unchecked_background",
                "$radio_state": "unchecked",
                "layer": 2
              }
            },
            {
              "checked@state_base": {
                "$background": "$checked_background",
                "$radio_state": "checked",
                "layer": 3
              }
            },
            {
              "unchecked_hover@state_base": {
                "$background": "$unchecked_hover_background",
                "$radio_state": "unchecked_hover",
                "layer": 3
              }
            },
            {
              "checked_hover@state_base": {
                "$background": "$checked_hover_background",
                "$radio_state": "checked_hover",
                "layer": 4
              }
            },
            {
              "unchecked_locked@state_base": {
                "$background": "$unchecked_locked_background",
                "$radio_state": "unchecked_locked",
                "layer": 1
              }
            },
            {
              "checked_locked@state_base": {
                "$background": "$checked_locked_background",
                "$radio_state": "checked_locked",
                "layer": 1
              }
            },
            {
              "unchecked_locked_hover@state_base": {
                "$background": "$unchecked_locked_background",
                "$radio_state": "unchecked_locked_hover",
                "layer": 1
              }
            },
            {
              "checked_locked_hover@state_base": {
                "$background": "$checked_locked_background",
                "$radio_state": "checked_locked_hover",
                "layer": 1
              }
            }
          ]
        }
      }
    ]
  },
  
  "state_base": {
    "type": "panel",
    "$tooltip_name|default": "none",
    "controls": [
      { "@tooltip_mcjava.tooltip": { "visible": "($radio_state = checked_hover or $radio_state = unchecked_hover or $radio_state = checked_locked_hover or $radio_state = unchecked_locked_hover)", "ignored": "($tooltip_name = 'none')" } },
      { "@$background": {} },
      { "@$content": {} }
    ]
  },

  "radio_button_label@button_mcjava.button_label": {
    "text": "$radio_button_label",
    "$text_color|default": "white",
    "locked_color": "$locked_text_color",
    "$locked_text_color|default": [0.62, 0.62, 0.62],
    "bindings": "$text_bindings",
    "layer": 10,
    "$text_bindings|default": []
  }
}