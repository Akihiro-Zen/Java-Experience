{
  "namespace": "option_toggle_mcjava",

  "toggle_base": {
    "type": "toggle",
    "$toggle_focus_precedence|default": 0,
    "focus_identifier": "$focus_id",
    "focus_change_down": "$focus_override_down",
    "focus_change_up": "$focus_override_up",
    "focus_change_left": "$focus_override_left",
    "focus_change_right": "$focus_override_right",
    "focus_enabled": "$focus_enabled",
    "focus_magnet_enabled": "$focus_magnet_enabled",
    "focus_wrap_enabled": "$focus_wrap_enabled",
    "$focus_id|default": "",
    "$focus_override_down|default": "",
    "$focus_override_up|default": "",
    "$focus_override_left|default": "",
    "$focus_override_right|default": "",
    "$focus_enabled|default": true,
    "$focus_magnet_enabled|default": true,
    "$focus_wrap_enabled": true,
    "tts_toggle_on": "$toggle_tts_toggle_on_text",
    "tts_toggle_off": "$toggle_tts_toggle_off_text",
    "tts_name": "$toggle_tts_name",
    "tts_control_header": "$toggle_tts_header",
    "tts_section_header": "$tts_section_header",
    "tts_override_control_value": "$toggle_tts_override_toggle_value",
    "tts_control_type_order_priority": "$toggle_tts_type_priority",
    "$toggle_tts_name|default": "accessibility.toggle.tts.title",
    "$toggle_tts_header_binding_type|default": "none",
    "$toggle_tts_header_binding_condition|default": "visible",
    "$toggle_tts_header_binding_collection_name|default": "",
    "$toggle_tts_header|default": "",
    "$toggle_tts_value_binding_type|default": "none",
    "$toggle_tts_value_binding_condition|default": "visible",
    "$toggle_tts_value_binding_collection_name|default": "",
    "$toggle_tts_override_toggle_value|default": "",
    "$toggle_tts_toggle_on_text|default": "accessibility.state.on",
    "$toggle_tts_toggle_off_text|default": "accessibility.state.off",
    "$toggle_tts_type_priority|default": -100,
    "$tts_section_header|default": "",
    "sound_name": "$sound_name",
    "sound_volume": "$sound_volume",
    "sound_pitch": "$sound_pitch",
    "$sound_name|default": "ui.button.click",
    "$sound_volume|default": 0.9,
    "$sound_pitch|default": 1.0,
    "checked_control": "checked",
    "unchecked_control": "unchecked",
    "checked_hover_control": "checked_hover",
    "unchecked_hover_control": "unchecked_hover",
    "checked_locked_control": "checked_locked",
    "unchecked_locked_control": "unchecked_locked",
    "checked_locked_hover_control": "checked_locked_hover",
    "unchecked_locked_hover_control": "unchecked_locked_hover",
    "property_bag": "$toggle_property_bag",
    "controls": "$toggle_controls",
    "button_mappings": "$button_mappings",
    "bindings": "$toggle_bindings",
    "$toggle_property_bag|default": {
      "#toggle_state": true
    },
    "$toggle_controls|default": [
      { "unchecked@$unchecked_control": {} },
      { "checked@$checked_control": {} },
      { "unchecked_hover@$unchecked_hover_control": {} },
      { "checked_hover@$checked_hover_control": {} },
      { "unchecked_locked@$unchecked_locked_control": {} },
      { "checked_locked@$checked_locked_control": {} },
      { "unchecked_locked_hover@$unchecked_locked_control": {} },
      { "checked_locked_hover@$checked_locked_control": {} }
    ],
    "$unchecked_control|default": "",
    "$checked_control|default": "",
    "$unchecked_hover_control|default": "",
    "$checked_hover_control|default": "",
    "$unchecked_locked_control|default": "",
    "$checked_locked_control|default": "",
    "$toggle_bindings|default": [
      {
        "binding_type": "$toggle_binding_type",
        "binding_condition": "$toggle_binding_condition",
        "binding_collection_name": "$toggle_grid_collection_name",
        "binding_name": "$toggle_state_binding_name",
        "binding_name_override": "#toggle_state"
      },
      {
        "binding_type": "$toggle_enabled_binding_type",
        "binding_condition": "$toggle_enabled_binding_condition",
        "binding_collection_name": "$toggle_grid_collection_name",
        "binding_name": "$toggle_enabled_binding_name",
        "binding_name_override": "#enabled"
      },
      {
        "binding_type": "$toggle_collection_details_type",
        "binding_collection_name": "$toggle_collection_detail_name"
      },
      {
        "binding_type": "$toggle_tts_header_binding_type",
        "binding_condition": "$toggle_tts_header_binding_condition",
        "binding_collection_name": "$toggle_tts_header_binding_collection_name",
        "binding_name": "$toggle_tts_header"
      },
      {
        "binding_type": "$toggle_tts_value_binding_type",
        "binding_condition": "$toggle_tts_value_binding_condition",
        "binding_collection_name": "$toggle_tts_value_binding_collection_name",
        "binding_name": "$toggle_tts_override_toggle_value"
      },
      {
        "binding_type": "$toggle_tts_enabled_binding_type",
        "binding_name": "#tts_enabled",
        "binding_name_override": "#focus_enabled"
      }
    ],
    "$button_mappings|default": [
      {
        "from_button_id": "button.menu_select",
        "to_button_id": "button.menu_select",
        "mapping_type": "pressed"
      },
      {
        "from_button_id": "button.menu_ok",
        "to_button_id": "button.menu_ok",
        "mapping_type": "focused"
      },
      {
        "ignored": "(not $cancel_mapping)",
        "from_button_id": "button.menu_cancel",
        "to_button_id": "button.menu_ok",
        "mapping_type": "global"
      },
      {
        "ignored": "(not $double_mapping)",
        "from_button_id": "button.menu_select",
        "to_button_id": "$double_mapping_id",
        "mapping_type": "double_pressed"
      },
      {
        "ignored": "(not $double_mapping)",
        "from_button_id": "button.menu_ok",
        "to_button_id": "$double_mapping_id",
        "mapping_type": "double_pressed"
      },
      {
        "ignored": "(not $custom_mapping)",
        "from_button_id": "$custom_mapping_from_id",
        "to_button_id": "$custom_mapping_to_id",
        "mapping_type": "$custom_mapping_type",
        "scope": "view"
      },
      {
        "ignored": "(not $controller_mapping)",
        "from_button_id": "$controller_mapping_from_id",
        "to_button_id": "$controller_mapping_to_id",
        "mapping_type": "$controller_mapping_type",
        "scope": "controller"
      },
      {
        "ignored": "(not $enable_directional_toggling)",
        "from_button_id": "button.menu_left",
        "to_button_id": "$toggle_off_button",
        "mapping_type": "pressed",
        "input_mode_condition": "gamepad_and_not_gaze"
      },
      {
        "ignored": "(not $enable_directional_toggling)",
        "from_button_id": "button.menu_right",
        "to_button_id": "$toggle_on_button",
        "mapping_type": "pressed",
        "input_mode_condition": "gamepad_and_not_gaze"
      }
    ],
    "enable_directional_toggling": "$enable_directional_toggling",
    "radio_toggle_group": "$toggle_group",
    "toggle_name": "$toggle_name",
    "toggle_default_state": "$toggle_default_state",
    "toggle_group_forced_index": "$toggle_index",
    "toggle_group_default_selected": "$toggle_default_selected",
    "toggle_grid_collection_name": "$toggle_grid_collection_name",
    "toggle_on_button": "$toggle_on_button",
    "toggle_off_button": "$toggle_off_button",
    "$toggle_binding_type|default": "global",
    "$toggle_binding_condition|default": "visible",
    "$toggle_state_binding_name|default": "#toggle_state",
    "$toggle_enabled_binding_type|default": "none",
    "$toggle_enabled_binding_condition|default": "visible",
    "$toggle_enabled_binding_name|default": "#toggle_enabled",
    "$toggle_collection_details_type|default": "none",
    "$toggle_collection_detail_name|default": "",
    "$toggle_tts_enabled_binding_type|default": "none",
    "$cancel_mapping|default": false,
    "$double_mapping|default": false,
    "$custom_mapping|default": false,
    "$double_mapping_id|default": false,
    "$controller_mapping|default": false,
    "$controller_mapping_from_id|default": "",
    "$controller_mapping_to_id|default": "",
    "$controller_mapping_type|default": "",
    "$custom_mapping_from_id|default": "",
    "$custom_mapping_to_id|default": "",
    "$custom_mapping_type|default": "",
    "$enable_directional_toggling|default": false,
    "$toggle_group|default": false,
    "$toggle_name|default": "this_toggle",
    "$toggle_default_state|default": false,
    "$toggle_index|default": -1,
    "$toggle_default_selected|default": 0,
    "$toggle_grid_collection_name|default": "",
    "$toggle_on_button|default": "toggle.toggle_on",
    "$toggle_off_button|default": "toggle.toggle_off",
    "layer": 1
  },

  "option_toggle": {
    "type": "panel",
    "size": [150, 20],
    "controls": [
      {
        "base@option_toggle_mcjava.toggle_base": {
          "$toggle_state_binding_name|default": "$option_binding_name",
          "$toggle_enabled_binding_name|default": "$option_enabled_binding_name",
          "$option_enabled_binding_type|default": "global",
          "$option_enabled_binding_name|default": "",
          "$binding_type": "global",
          "$binding_condition": "once",
          "enabled": "$enabled",
          "$enabled|default": true,
          "variables": [
            {
              "requires": "(not $option_enabled_binding_name or not $enabled)",
              "$option_enabled_binding_name": "#not_data_bound",
              "$option_enabled_binding_type": "none"
            }
          ],
          "$enable_directional_toggling": false,
          "$toggle_bindings": [
            {
              "binding_type": "$toggle_binding_type",
              "binding_condition": "$toggle_binding_condition",
              "binding_collection_name": "$toggle_grid_collection_name",
              "binding_name": "$toggle_state_binding_name",
              "binding_name_override": "#toggle_state"
            },
            {
              "binding_type": "$option_enabled_binding_type",
              "binding_condition": "$toggle_enabled_binding_condition",
              "binding_collection_name": "$toggle_grid_collection_name",
              "binding_name": "$option_enabled_binding_name",
              "binding_name_override": "#enabled"
            },
            {
              "binding_type": "$toggle_collection_details_type",
              "binding_collection_name": "$toggle_collection_detail_name"
            },
            {
              "binding_type": "$toggle_tts_header_binding_type",
              "binding_condition": "$toggle_tts_header_binding_condition",
              "binding_collection_name": "$toggle_tts_header_binding_collection_name",
              "binding_name": "$toggle_tts_header"
            },
            {
              "binding_type": "$toggle_tts_value_binding_type",
              "binding_condition": "$toggle_tts_value_binding_condition",
              "binding_collection_name": "$toggle_tts_value_binding_collection_name",
              "binding_name": "$toggle_tts_override_toggle_value"
            },
            {
              "binding_type": "$toggle_tts_enabled_binding_type",
              "binding_name": "#tts_enabled",
              "binding_name_override": "#focus_enabled"
            }
          ],
          "$unchecked_background|default": "resources_mcjava.button_default",
          "$checked_background|default": "resources_mcjava.button_default",
          "$unchecked_hover_background|default": "resources_mcjava.button_hover",
          "$checked_hover_background|default": "resources_mcjava.button_hover",
          "$checked_locked_background|default": "resources_mcjava.button_disabled",
          "$unchecked_locked_background|default": "resources_mcjava.button_disabled",
          "$content|default": "option_toggle_mcjava.option_toggle_text_panel",
          "$state_name": "",
          "$state_unchecked_text|default": "options.off",
          "$state_checked_text|default": "options.on",
          "controls": [
            {
              "unchecked@option_toggle_mcjava.state_base": {
                "$state_name": "unchecked",
                "$background": "$unchecked_background",
                "$option_toggle_state_text": "$state_unchecked_text"
              }
            },
            {
              "checked@option_toggle_mcjava.state_base": {
                "$state_name": "checked",
                "$background": "$checked_background",
                "$option_toggle_state_text": "$state_checked_text"
              }
            },
            {
              "unchecked_hover@option_toggle_mcjava.state_base": {
                "$state_name": "unchecked_hover",
                "$background": "$unchecked_hover_background",
                "$option_toggle_state_text": "$state_unchecked_text"
              }
            },
            {
              "checked_hover@option_toggle_mcjava.state_base": {
                "$state_name": "checked_hover",
                "$background": "$checked_hover_background",
                "$option_toggle_state_text": "$state_checked_text"
              }
            },
            {
              "unchecked_locked@option_toggle_mcjava.state_base": {
                "$state_name": "unchecked_locked",
                "$background": "$unchecked_locked_background",
                "$option_toggle_state_text": "$state_unchecked_text"
              }
            },
            {
              "checked_locked@option_toggle_mcjava.state_base": {
                "$state_name": "checked_locked",
                "$background": "$checked_locked_background",
                "$option_toggle_state_text": "$state_checked_text"
              }
            },
            {
              "unchecked_locked_hover@option_toggle_mcjava.state_base": {
                "$state_name": "unchecked_locked_hover",
                "$background": "$unchecked_locked_background",
                "$option_toggle_state_text": "$state_unchecked_text"
              }
            },
            {
              "checked_locked_hover@option_toggle_mcjava.state_base": {
                "$state_name": "checked_locked_hover",
                "$background": "$checked_locked_background",
                "$option_toggle_state_text": "$state_checked_text"
              }
            }
          ]
        }
      }
    ]
  },

  "state_base": {
    "type": "panel",
    "$tooltip_name|default": "none",
    "controls": [
      { "@tooltip_mcjava.tooltip": { "visible": "($state_name = checked_hover or $state_name = unchecked_hover or $state_name = checked_locked_hover or $state_name = unchecked_locked_hover)", "ignored": "($tooltip_name = 'none')" } },
      { "@$background": {} },
      { "@$content": {} }
    ]
  },

  "option_toggle_text_panel": {
    "type": "stack_panel",
    "orientation": "horizontal",
    "size": [ "100%c", 10 ],
    "offset": [0.5, 0],
    "$option_toggle_text_color|default": "white",
    "$option_toggle_state_text_color|default": "white",
    "$text_max_size": [ "default", "default" ],
    "$show_argument|default": true,
    "controls": [
      {
        "option_toggle_label@button_mcjava.button_label": {
          "text": "$option_toggle_text",
          "color": "$option_toggle_text_color",
          "bindings": "$option_toggle_text_bindings",
          "visible": "$show_argument",
          "$option_toggle_text_bindings|default": []
        }
      },
      {
        "space": {
          "type": "label",
          "text": ": ",
          "visible": "$show_argument",
          "shadow": true
        }
      },
      {
        "option_toggle_state_text@button_mcjava.button_label": {
          "text": "$option_toggle_state_text",
          "color": "$option_toggle_state_text_color",
          "bindings": "$option_toggle_state_text_bindings",
          "$option_toggle_state_text_bindings|default": []
        }
      }
    ]
  }
}
          