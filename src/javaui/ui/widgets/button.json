{
  "namespace": "button_mcjava",

  "button_base": {
    "type": "button",
    "default_control": "default",
    "hover_control": "hover",
    "pressed_control": "pressed",
    "locked_control": "locked",
    "focus_identifier": "$focus_id",
    "focus_change_down": "$focus_override_down",
    "focus_change_up": "$focus_override_up",
    "focus_change_left": "$focus_override_left",
    "focus_change_right": "$focus_override_right",
    "focus_enabled": "$focus_enabled",
    "focus_magnet_enabled": "$focus_magnet_enabled",
    "default_focus_precedence": "$button_focus_precedence",
    "$focus_id|default": "",
    "$focus_override_down|default": "",
    "$focus_override_up|default": "",
    "$focus_override_left|default": "",
    "$focus_override_right|default": "",
    "$focus_enabled|default": true,
    "$focus_magnet_enabled|default": true,
    "$button_focus_precedence|default": 0,
    "tts_name": "$button_tts_name",
    "tts_control_header": "$button_tts_header",
    "tts_section_header": "$tts_section_header",
    "tts_control_type_order_priority": "$button_tts_control_type_order_priority",
    "$button_tts_name|default": "accessibility.button.tts.title",
    "$button_tts_header|default": "",
    "$tts_section_header|default": "",
    "$button_tts_control_type_order_priority|default": 100,
    "sound_name": "$sound_name",
    "sound_volume": "$sound_volume",
    "sound_pitch": "$sound_pitch",
    "$sound_name|default": "ui.button.click",
    "$sound_volume|default": 0.9,
    "$sound_pitch|default": 1.0,
    "button_mappings": [
      {
        "from_button_id": "button.menu_select",
        "to_button_id": "$pressed_button_name",
        "mapping_type": "pressed"
      },
      {
        "from_button_id": "button.menu_ok",
        "to_button_id": "$pressed_button_name",
        "mapping_type": "focused"
      }
    ],
    "layer": 1
  },

  "button@button_base": {
    "size": [200, 20],
    "$default_background|default": "resources_mcjava.button_default",
    "$hover_background|default": "resources_mcjava.button_hover",
    "$locked_background|default": "resources_mcjava.button_disabled",
    "$content|default": "button_mcjava.button_label",
    "$state_name": "",
    "$button_text_binding_type|default": "none",
    "$button_binding_condition|default": "none",
    "$button_text_grid_collection_name|default": "",
    "controls": [
      {
        "default@button_mcjava.state_base": {
          "$state_name": "default",
          "$background": "$default_background"
        }
      },
      {
        "hover@button_mcjava.state_base": {
          "$state_name": "hover",
          "$background": "$hover_background"
        }
      },
      {
        "pressed@button_mcjava.state_base": {
          "$state_name": "hover",
          "$background": "$hover_background"
        }
      },
      {
        "locked@button_mcjava.state_base": {
          "$state_name": "locked",
          "$background": "$locked_background"
        }
      }
    ]
  },

  "action_button@button": {
    "$pressed_button_name|default": "unset_button_name",
    "$button_text|default": "unset $button_text"
  },

  "link_button@button": {
    "$pressed_button_name": "button.menu_open_uri",
    "$link|default": "",
    "property_bag": {
      "#hyperlink": "$link"
    }
  },

  "action_link_button@action_button": {
    "$pressed_button_name": "button.menu_open_uri",
    "$link|default": "unset #hyperlink in property_bag",
    "property_bag": {
      "#hyperlink": "$link"
    }
  },

  "state_base": {
    "type": "panel",
    "$tooltip_name|default": "none",
    "controls": [
      { "@tooltip_mcjava.tooltip": { "visible": "($state_name = hover)", "ignored": "($tooltip_name = 'none')" } },
      { "@$background": {} },
      { "@$content": {} }
    ]
  },

  "button_label": {
    "type": "label",
    "text": "$button_text",
    "color": "$text_color",
    "$text_color|default": "white",
    "locked_color": "$locked_text_color",
    "$locked_text_color|default": [0.62, 0.62, 0.62],
    "font_type": "$text_font_type",
    "font_size": "$text_font_size",
    "font_scale_factor": "$text_font_scale",
    "offset": "$text_offset",
    "anchor_from": "$text_anchor",
    "anchor_to": "$text_anchor",
    "shadow": "$text_shadow",
    "size": "$text_size",
    "max_size": "$text_max_size",
    "text_alignment": "$text_alignment",
    "alpha": "$text_alpha",
    "locked_alpha": "$text_locked_alpha",
    "layer": "$text_layer",
    "bindings": "$text_bindings",
    "$button_text|default": "button_text",
    "$text_font_type|default": "default",
    "$text_font_size|default": "normal",
    "$text_font_scale|default": 1.0,
    "$text_offset|default": [0.5, 0],
    "$text_anchor|default": "center",
    "$text_shadow|default": true,
    "$text_size|default": [ "default", "default" ],
    "$text_max_size|default": [ "100%", 10 ],
    "$text_alignment|default": "center",
    "$text_alpha|default": 1.0,
    "$text_locked_alpha|default": 1.0,
    "$text_layer|default": 10,
    "$text_bindings|default": [
      {
        "binding_type": "$button_text_binding_type",
        "binding_condition": "$button_binding_condition",
        "binding_collection_name": "$button_text_grid_collection_name",
        "binding_name": "$button_text",
        "binding_name_override": "$button_text"
      }
    ]
  }
}