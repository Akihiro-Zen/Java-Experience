{
  "namespace": "braze_mcjava",

  "braze_screen_content_panel": {
    "type": "panel",
    "$text_name": "#headline_text",
    "controls": [
      { "title@account_transfer_error_mcjava.title_label": {} },
      { "content_panel@braze_mcjava.content_panel": {} }
    ]
  },

  "content_panel": {
    "type": "stack_panel",
    "size": ["70%", "100%c"],
    "offset": [0, "-4%"],
    "layer": 1,
    "controls": [
      {
        "main_content": {
          "size": ["100%", "100%c"],
          "type": "label",
          "layer": 1,
          "text": "#body_text",
          "color": "white",
          "shadow": true,
          "bindings": [
            {
              "binding_name": "#body_text"
            }
          ]
        }
      },
      {
        "space@common_mcjava.vspace": {
          "size": [0, 10]
        }
      },
      {
        "button_panel": {
          "type": "panel",
          "size": ["100%", 20],
          "controls": [
            {
              "left_button@braze_mcjava.left_button": {
                "offset": [-80, 0]
              }
            },
            {
              "right_button@braze_mcjava.right_button": {
                "offset": [80, 0]
              }
            },
            {
              "exit_button@common_mcjava.exit_button": {
                "offset": [0, 24]
              }
            }
          ]
        }
      }
    ]
  },

  "left_button@button_mcjava.button": {
    "$pressed_button_name": "button.left_button",
    "$button_text": "#leftButton_text",
    "size": [150, 20],
    "$button_text_binding_type": "global"
  },

  "right_button@button_mcjava.button": {
    "$pressed_button_name": "button.right_button",
    "$button_text": "#rightButton_text",
    "size": [150, 20],
    "$button_text_binding_type": "global"
  }
}