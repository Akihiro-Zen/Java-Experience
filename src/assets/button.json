/* By @FMarquesPTO. All rights reserved. */
{
  "namespace": "button_mcjava",

  "base_button@common_mcjava.button": {
    "size": [200, 20],
    /* States */
    "locked_control": "disabled",
    /* These states are for passing the button state to the button content */
    "$default_state|default": false,
    "$hover_state|default": false,
    "$pressed_state|default": false,
    "$disabled_state|default": false,
    "$button_state|default": "",
    /* Text bindings */
    "$button_text_binding_type|default": "none",
    "$button_binding_condition|default": "none",
    "$button_text_grid_collection_name|default": "",
    /* Content */
    "$button_type|default": "button_mcjava.button_state_panel",
    "$button_content|default": "button_mcjava.button_label",
    "$button_background|default": "button_mcjava.resizing_button_background_panel",
    "$texture_src|default": "assets/minecraft/textures/gui/widgets",
    "$bg_default_src|default": "button_mcjava.button_default",
    "$bg_hover_src|default": "button_mcjava.button_hover",
    "$bg_disabled_src|default": "button_mcjava.button_disabled",
    "$text_default_color|default": "$button_default_text_color",
    "$text_disabled_color|default": "$button_disabled_text_color",
    "controls": [
      {
        "default@$button_type": {
          "$img_src": "$bg_default_src",
          "$text_color": "$text_default_color",
          "$default_state": true,
          "$button_state": "default",
          "layer": 2
        }
      },
      {
        "hover@$button_type": {
          "$img_src": "$bg_hover_src",
          "$text_color": "$text_default_color",
          "$hover_state": true,
          "$button_state": "hover",
          "layer": 3
        }
      },
      {
        "pressed@$button_type": {
          "$img_src": "$bg_hover_src",
          "$text_color": "$text_default_color",
          "$pressed_state": true,
          "$button_state": "pressed",
          "layer": 4
        }
      },
      {
        "disabled@$button_type": {
          "$img_src": "$bg_disabled_src",
          "$text_color": "$text_disabled_color",
          "$disabled_state": true,
          "$button_state": "disabled",
          "layer": 1
        }
      }
    ]
  },

  "base_radio": {
    "type": "panel",
    "size": [270, 18],
    /* These states are for passing the button state to the button content */
    "$checked_state|default": false,
    "$unchecked_state|default": false,
    "$checked_hover_state|default": false,
    "$unchecked_hover_state|default": false,
    "$unchecked_disabled_state|default": false,
    "$checked_disabled_state|default": false,
    /* Content */
    "$radio_type|default": "button_mcjava.radio_state_panel",
    "$radio_content|default": "button_mcjava.radio_label",
    "$radio_background|default": "button_mcjava.radio_background_panel",
    "$text_color|default": "$button_default_text_color",
    "$bg_unchecked_src": "button_mcjava.radio_unchecked",
    "$bg_checked_src": "button_mcjava.radio_checked",
    "$bg_unchecked_hover_src": "button_mcjava.radio_hover",
    "$bg_checked_hover_src": "button_mcjava.radio_hover",
    "$bg_unchecked_disabled_src": "button_mcjava.radio_unchecked_disabled",
    "$bg_checked_disabled_src": "button_mcjava.radio_checked_disabled",
    "controls": [
      {
        "base@common_mcjava.toggle": {
          /* States */
          "checked_locked_control": "checked_disabled",
          "unchecked_locked_control": "unchecked_disabled",
          "checked_locked_hover_control": "checked_disabled",
          "unchecked_locked_hover_control": "unchecked_disabled",
          /* #Ended */
          "variables": [
            {
              "requires": "(not $toggle_enabled_binding_name or $disabled)",
              "$toggle_enabled_binding_name": "#not_data_bound",
              "$toggle_enabled_binding_type": "none"
            }
          ],
          "$toggle_state_binding_name|default": "",
          "$option_enabled_binding_name|default": "",
          "toggle_name": "$radio_button_name",
          "$toggle_enabled_binding_type": "global",
          "radio_toggle_group": true,
          "controls": [
            {
              "unchecked@$radio_type": {
                "$img_src": "$bg_unchecked_src",
                "$unchecked_state": true,
                "$radio_state": "unchecked",
                "layer": 2
              }
            },
            {
              "checked@$radio_type": {
                "$img_src": "$bg_checked_src",
                "$checked_state": true,
                "$radio_state": "checked",
                "layer": 3
              }
            },
            {
              "unchecked_hover@$radio_type": {
                "$img_src": "$bg_unchecked_hover_src",
                "$unchecked_hover_state": true,
                "$radio_state": "unchecked_hover",
                "layer": 3
              }
            },
            {
              "checked_hover@$radio_type": {
                "$img_src": "$bg_checked_hover_src",
                "$checked_hover_state": true,
                "$radio_state": "checked_hover",
                "layer": 4
              }
            },
            {
              "unchecked_disabled@$radio_type": {
                "$img_src": "$bg_unchecked_disabled_src",
                "$unchecked_disabled_state": true,
                "$radio_state": "unchecked_disabled",
                "layer": 1
              }
            },
            {
              "checked_disabled@$radio_type": {
                "$img_src": "$bg_checked_disabled_src",
                "$checked_disabled_state": true,
                "$radio_state": "checked_disabled",
                "layer": 1
              }
            }
          ]
        }
      }
    ]
  },

  "base_radio_group": {
    "type": "panel",
    /* These states are for passing the button state to the button content */
    "$checked_state|default": false,
    "$unchecked_state|default": false,
    "$checked_hover_state|default": false,
    "$unchecked_hover_state|default": false,
    "$unchecked_disabled_state|default": false,
    "$checked_disabled_state|default": false,
    /* Content */
    "$radio_group_type|default": "button_mcjava.radio_group_state_panel",
    "$radio_group_content|default": "button_mcjava.radio_group_text_panel",
    "$radio_group_background|default": "button_mcjava.resizing_radio_group_background_panel",
    "$texture_src|default": "assets/minecraft/textures/gui/widgets",
    "$text_color|default": "$button_default_text_color",
    "$bg_unchecked_src": "button_mcjava.button_default",
    "$bg_checked_src": "button_mcjava.button_default",
    "$bg_unchecked_hover_src": "button_mcjava.button_hover",
    "$bg_checked_hover_src": "button_mcjava.button_hover",
    "$bg_unchecked_disabled_src": "button_mcjava.button_disabled",
    "$bg_checked_disabled_src": "button_mcjava.button_disabled",
    "bindings": [
      {
        "binding_name": "$this_action",
        "binding_name_override": "#visible"
      }
    ],
    "controls": [
      {
        "base@common_mcjava.toggle": {
          /* States */
          "checked_locked_control": "checked_disabled",
          "unchecked_locked_control": "unchecked_disabled",
          "checked_locked_hover_control": "checked_disabled",
          "unchecked_locked_hover_control": "unchecked_disabled",
          /* #Ended */
          "variables": [
            {
              "requires": "(not $toggle_enabled_binding_name or $disabled)",
              "$toggle_enabled_binding_name": "#not_data_bound",
              "$toggle_enabled_binding_type": "none"
            }
          ],
          "$toggle_state_binding_name|default": "$toggle_binding_name",
          "$toggle_enabled_binding_name|default": "",
          "$toggle_enabled_binding_type|default": "global",
          "toggle_name": "$next_action",
          "$toggle_binding_name|default": "$next_action",
          "$toggle_state_binding_name": "$this_action",
          "$binding_type": "global",
          "$binding_condition": "once",
          "$enable_directional_toggling": false,
          "controls": [
            {
              "unchecked@$radio_group_type": {
                "$img_src": "$bg_unchecked_src",
                "$unchecked_state": true,
                "$radio_group_state": "unchecked",
                "layer": 2
              }
            },
            {
              "checked@$radio_group_type": {
                "$img_src": "$bg_checked_src",
                "$checked_state": true,
                "$radio_group_state": "checked",
                "layer": 3
              }
            },
            {
              "unchecked_hover@$radio_group_type": {
                "$img_src": "$bg_unchecked_hover_src",
                "$unchecked_hover_state": true,
                "$radio_group_state": "unchecked_hover",
                "layer": 3
              }
            },
            {
              "checked_hover@$radio_group_type": {
                "$img_src": "$bg_checked_hover_src",
                "$checked_hover_state": true,
                "$radio_group_state": "checked_hover",
                "layer": 4
              }
            },
            {
              "unchecked_disabled@$radio_group_type": {
                "$img_src": "$bg_unchecked_disabled_src",
                "$unchecked_disabled_state": true,
                "$radio_group_state": "unchecked_disabled",
                "layer": 1
              }
            },
            {
              "unchecked_disabled@$radio_group_type": {
                "$img_src": "$bg_checked_disabled_src",
                "$checked_disabled_state": true,
                "$radio_group_state": "checked_disabled",
                "layer": 1
              }
            }
          ]
        }
      }
    ]
  },

  /* Images */

  "button_default@common_mcjava.image": {
    "size": [200, 20],
    "variables": [
      { "requires": "($widgets_resolution = 256x)", "$0": [0, 66], "$1": [200, 20] },
      { "requires": "($widgets_resolution = 512x)", "$0": [0, 132], "$1": [400, 40] },
      { "requires": "($widgets_resolution = 1024x)", "$0": [0, 264], "$1": [800, 80] },
      { "requires": "($widgets_resolution = 2048x)", "$0": [0, 528], "$1": [1600, 160] },
      { "requires": "($widgets_resolution = 4096x)", "$0": [0, 1056], "$1": [3200, 320] }
    ]
  },

  "button_hover@common_mcjava.image": {
    "size": [200, 20],
    "uv": "$2",
    "uv_size": "$3",
    "variables": [
      { "requires": "($widgets_resolution = 256x)", "$2": [0, 86], "$3": [200, 20] },
      { "requires": "($widgets_resolution = 512x)", "$2": [0, 172], "$3": [400, 40] },
      { "requires": "($widgets_resolution = 1024x)", "$2": [0, 344], "$3": [800, 80] },
      { "requires": "($widgets_resolution = 2048x)", "$2": [0, 688], "$3": [1600, 160] },
      { "requires": "($widgets_resolution = 4096x)", "$2": [0, 1376], "$3": [3200, 320] }
    ]
  },

  "button_disabled@common_mcjava.image": {
    "size": [200, 20],
    "uv": "$4",
    "uv_size": "$5",
    "variables": [
      { "requires": "($widgets_resolution = 256x)", "$4": [0, 46], "$5": [200, 20] },
      { "requires": "($widgets_resolution = 512x)", "$4": [0, 92], "$5": [400, 40] },
      { "requires": "($widgets_resolution = 1024x)", "$4": [0, 184], "$5": [800, 80] },
      { "requires": "($widgets_resolution = 2048x)", "$4": [0, 368], "$5": [1600, 160] },
      { "requires": "($widgets_resolution = 4096x)", "$4": [0, 736], "$5": [3200, 320] }
    ]
  },

  "radio_unchecked": {
    "type": "image",
    "texture": "src/assets/img/none"
  },

  "radio_checked@button_mcjava.radio_unchecked": {
    "texture": "src/assets/img/indentbox"
  },

  "radio_hover@button_mcjava.radio_unchecked": {
    "texture": "src/assets/img/indentboxhover"
  },

  "radio_unchecked_disabled@button_mcjava.radio_unchecked": {
    "texture": "src/assets/img/none"
  },

  "radio_checked_disabled@button_mcjava.radio_unchecked": {
    "texture": "src/assets/img/indentbox"
  },

  /* State Content */

  "button_state_panel": {
    "type": "panel",
    "size": ["100%", "100%"],
    "controls": [
      { "$button_background@$button_background": {} },
      {
        "content": {
          "type": "panel",
          "size": "$button_content_size",
          "$button_content_size|default": ["100%", "100%"],
          "layer": 3,
          "controls": [
            { "$button_content@$button_content": {} }
          ]
        }
      }
    ]
  },

  "radio_state_panel": {
    "type": "panel",
    "size": ["100%", "100%"],
    "controls": [
      { "$radio_background@$radio_background": {} },
      {
        "content": {
          "type": "panel",
          "size": "$radio_content_size",
          "$radio_content_size|default": ["100%", "100%"],
          "layer": 3,
          "controls": [
            { "$radio_content@$radio_content": {} }
          ]
        }
      }
    ]
  },

  "radio_group_state_panel": {
    "type": "panel",
    "size": ["100%", "100%"],
    "controls": [
      { "$radio_group_background@$radio_group_background": {} },
      {
        "content": {
          "type": "panel",
          "size": "$radio_group_content_size",
          "$radio_group_content_size|default": ["100%", "100%"],
          "layer": 3,
          "controls": [
            { "$radio_group_content@$radio_group_content": {} }
          ]
        }
      }
    ]
  },

  "resizing_button_background_panel": {
    "type": "panel",
    "size": ["100%", "100%"],
    "controls": [
      {
        "left_panel": {
          "type": "panel",
          "size": ["50%", "100% + 1px"],
          "anchor_from": "left_middle",
          "anchor_to": "left_middle",
          "clips_children": true,
          "offset": [0, 0],
          "controls": [
            {
              "left@$img_src": {
                "offset": [0, 0],
                "anchor_from": "left_middle",
                "anchor_to": "left_middle"
              }
            }
          ]
        }
      },
      {
        "right_panel": {
          "type": "panel",
          "size": ["50%", "100% + 1px"],
          "clips_children": true,
          "anchor_from": "right_middle",
          "anchor_to": "right_middle",
          "offset": [0, 0],
          "controls": [
            {
              "right@$img_src": {
                "offset": [0, 0],
                "anchor_from": "right_middle",
                "anchor_to": "right_middle"
              }
            }
          ]
        }
      }
    ]
  },

  "radio_background_panel": {
    "type": "panel",
    "size": ["100%", "100%"],
    "controls": [
      { "img@$img_src": {} }
    ]
  },

  "resizing_radio_group_background_panel@button_mcjava.resizing_button_background_panel": {
  },

  "button_label": {
    "type": "label",
    "text": "$button_text",
    "color": "$text_color",
    "font_type": "$text_font_type",
    "font_size": "$text_font_size",
    "font_scale_factor": "$text_font_scale",
    "offset": "$text_offset",
    "anchor_from": "$text_anchor",
    "anchor_to": "$text_anchor",
    "shadow": "$text_shadow",
    "size": "$text_size",
    "max_size": "$text_max_size",
    "text_alignment": "$text_alignment",
    "alpha": "$text_alpha",
    "locked_alpha": "$text_locked_alpha",
    "layer": "$text_layer",
    "bindings": "$text_bindings",
    "$text_font_type|default": "default",
    "$text_font_size|default": "normal",
    "$text_font_scale|default": 1.0,
    "$text_offset|default": [0.5, 0],
    "$text_anchor|default": "center",
    "$text_shadow|default": true,
    "$text_size|default": [ "default", "default" ],
    "$text_max_size|default": [ "100%", 10 ],
    "$text_alignment|default": "center",
    "$text_alpha|default": 1.0,
    "$text_locked_alpha|default": 1.0,
    "$text_layer|default": 1.0,
    "$text_bindings|default": [
      {
        "binding_type": "$button_text_binding_type",
        "binding_condition": "$button_binding_condition",
        "binding_collection_name": "$button_text_grid_collection_name",
        "binding_name": "$button_text",
        "binding_name_override": "$button_text"
      }
    ]
  },

  "radio_label@button_mcjava.button_label": {
    "text": "$radio_button_text",
    "bindings": "$text_bindings",
    "$text_bindings|default": []
  },

  "radio_group_text_panel": {
    "type": "stack_panel",
    "orientation": "horizontal",
    "size": ["100%c", 10],
    "offset": [0.5, 0],
    "$radio_button_text_color|default": "$text_color",
    "$radio_action_text_color|default": "$text_color",
    "$text_max_size": [ "default", "default" ],
    "$argument|default": true,
    "variables": [
      {
        "requires": "($radio_action_text = '')",
        "$argument": false
      }
    ],
    "controls": [
      {
        "radio_group_label@button_mcjava.button_label": {
          "text": "$radio_button_text",
          "color": "$radio_button_text_color",
          "bindings": "$button_text_bindings",
          "$button_text_bindings|default": []
        }
      },
      {
        "space": {
          "type": "label",
          "text": ": ",
          "shadow": true,
          "visible": "$argument"
        }
      },
      {
        "action_text@button_mcjava.button_label": {
          "text": "$radio_action_text",
          "color": "$radio_action_text_color",
          "bindings": "$action_text_bindings",
          "$action_text_bindings|default": []
        }
      }
    ]
  },

  /* Buttons */

  "button@button_mcjava.base_button": {
    "$pressed_button_name|default": "",
    "$button_text|default": ""
  },

  "action_button@button_mcjava.base_button": {
    "$pressed_button_name|default": "unset_button_name",
    "$button_text|default": "unset $button_text"
  },

  "link_button@button_mcjava.base_button": {
    "$pressed_button_name": "button.menu_open_uri",
    "property_bag": {
      "#hyperlink": ""
    }
  },

  "radio_button@button_mcjava.base_radio": {
    "$radio_button_name|default": "$toggle_state_binding_name",
    "$radio_button_text|default": ""
  },

  "radio_group_panel": {
    "type": "panel",
    "size": [150, 20],
    "controls": "$radio_buttons",
    "$radio_buttons|default": []
  },

  "radio_group_button@button_mcjava.base_radio_group": {
    "size": ["100%", 20],
    "$radio_button_text|default": "",
    "$radio_action_text|default": "",
    "$this_action|default": "",
    "$next_action|default": ""
  }
}