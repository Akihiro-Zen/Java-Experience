{
  "namespace": "slider_mcjava",

  "base_slider": {
    "type": "panel",
    "size": [150, 20],
    /* These states are for passing the slider state to the slider content */
    "$default_state|default": false,
    "$hover_state|default": false,
    "$indent_state|default": false,
    "$disabled_state|default": false,
    "$slider_state|default": "",
    "$slider_box_state|default": "",
    /* Content */
    "$slider_type|default": "slider_mcjava.slider_state_panel",
    "$slider_background|default": "slider_mcjava.resizing_slider_background_panel",
    "$slider_box_type|default": "slider_mcjava.resizing_slider_box_background_panel",
    "$slider_content|default": "slider_mcjava.slider_text_panel",
    "$texture_src|default": "assets/minecraft/textures/gui/widgets",
    "$bg_default_src|default": "button_mcjava.button_disabled",
    "$bg_hover_src|default": "button_mcjava.button_disabled",
    "$box_bg_default_src|default": "button_mcjava.button_default",
    "$box_bg_hover_src|default": "button_mcjava.button_hover",
    "$box_bg_disabled_src|default": "button_mcjava.button_disabled",
    "$text_color|default": "$button_default_text_color",
    "$text_disabled_color|default": "$button_disabled_text_color",
    "controls": [
      {
        "base@common_mcjava.slider": {
          "size": ["100% - 8px", "100%"],
          "variables": [
            {
              "requires": "(not $slider_enabled_binding_name or not $enabled)",
              "$slider_enabled_binding_name": "#not_data_bound",
              "$slider_enabled_binding_type": "none"
            }
          ],
          "$slider_tts_header": "$slider_text",
          "$slider_tts_header_binding_type": "global",
          "$slider_enabled_binding_name|default": "",
          "$slider_enabled_binding_type": "global",
          "controls": [
            { "slider_box@slider_mcjava.slider_box": { "$slider_track_button": "$slider_name" } },
            {
              "slider_bar_default@$slider_type": {
                "size": [ "100% + 8px", "100%" ],
                "$img_src": "$bg_default_src",
                "$default_state": true,
                "$slider_state": "default",
                "layer": 2
              }
            },
            {
              "slider_bar_hover@$slider_type": {
                "size": [ "100% + 8px", "100%" ],
                "$img_src": "$bg_hover_src",
                "$hover_state": true,
                "$slider_state": "hover",
                "visible": false,
                "layer": 3
              }
            }
          ]
        }
      }
    ]
  },

  "slider_box": {
    "type": "slider_box",
    "layer": 4,
    "size": [ 8, 20 ],
    "anchor_to": "center",
    "anchor_from": "center",
    "default_control": "default",
    "hover_control": "hover",
    "locked_control": "locked",
    "indent_control": "indent",
    "controls": [
      {
        "default@$slider_box_type": {
          "$img_src": "$box_bg_default_src",
          "$default_state": true,
          "$slider_box_state": "default",
          "layer": 2
        }
      },
      {
        "hover@$slider_box_type": {
          "$img_src": "$box_bg_hover_src",
          "$hover_state": true,
          "$slider_box_state": "hover",
          "layer": 3
        }
      },
      {
        "indent@$slider_box_type": {
          "$img_src": "$box_bg_hover_src",
          "$indent_state": true,
          "$slider_box_state": "indent",
          "layer": 4
        }
      },
      {
        "locked@$slider_box_type": {
          "$img_src": "$box_bg_disabled_src",
          "$disabled_state": true,
          "$slider_box_state": "disabled",
          "layer": 1
        }
      }
    ]
  },

  "slider_state_panel": {
    "type": "panel",
    "size": ["100%", "100%"],
    "controls": [
      { "$slider_background@$slider_background": {} },
      {
        "content": {
          "type": "panel",
          "size": "$slider_content_size",
          "$slider_content_size|default": ["100%", "100%"],
          "layer": 3,
          "controls": [
            { "$slider_content@$slider_content": {} }
          ]
        }
      }
    ]
  },

  "resizing_slider_background_panel@button_mcjava.resizing_button_background_panel": {
  },

  "resizing_slider_box_background_panel@button_mcjava.resizing_button_background_panel": {
  },

  "slider_text_panel": {
    "type": "stack_panel",
    "orientation": "horizontal",
    "size": [ "100%c", 10 ],
    "anchor_from": "center",
    "anchor_to": "center",
    "$label_bindings|default": [],
    "$ignore_percentage|default": true,
    "controls": [
      { "option_label@slider_mcjava.slider_label": {} },
      {
        "percent": {
          "type": "label",
          "color": "$text_color",
          "shadow": true,
          "layer": 10,
          "ignored": "$ignore_percentage",
          "text": "gui.percentage",
          "locked_alpha": 1
        }
      }
    ]
  },

  "slider_label@button_mcjava.button_label": {
    "text": "$slider_text",
    "color": "$text_color",
    "bindings": "$slider_text_bindings",
    "layer": "$text_layer",
    "$text_max_size": ["default", "default"],
    "$slider_text_bindings|default": [],
    "$text_layer|default": 10
  },

  /* Slider */

  "slider@slider_mcjava.base_slider": {
    "$slider_text|default": ""
  }
}