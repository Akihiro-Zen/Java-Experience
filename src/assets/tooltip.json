{
  "namespace": "tooltip_mcjava",

  "base_tooltip": {
    "type": "button",
    "size": [0, 0],
    "focus_enabled": false,
    "focus_magnet_enabled": false,
    "follows_cursor": true,
    "always_handle_pointer": true,
    "consume_event": false,
    "layer": 120,
    "$tooltip_visibility|default": true,
    /* States */
    "$hover_state|default": false,
    "$pressed_state|default": false,
    "$unchecked_hover_state|default": false,
    "$checked_hover_state|default": false,
    "$button_state|default": "",
    "$radio_state|default": "",
    "$radio_group_state|default": "",
    "$tab_state|default": "",
    "controls": [
      {
        "base@$tooltip_background": {
          "visible": "($hover_state or $pressed_state or $button_state = 'hover' or $button_state = 'pressed' or $unchecked_hover_state or $checked_hover_state or $tab_state = 'unchecked_hover' or $tab_state = 'checked_hover' or $radio_state = 'unchecked_hover' or $radio_state = 'checked_hover'  or $radio_group_state = 'unchecked_hover' or $radio_group_state = 'checked_hover')",
          "size": "$base_size",
          "$base_size|default": ["100%c + 6px", "100%c + 7px"],
          "anchor_from": "$tooltip_orientation",
          "anchor_to": "$tooltip_orientation",
          "$tooltip_orientation|default": "top_left",
          "offset": "$tooltip_offset",
          "$tooltip_offset|default": [9, -15],
          "layer": -10,
          "controls": [
            {
              "label": {
                "type": "label",
                "$tooltip_text_offset|default": [0, -1],
                "offset": "$tooltip_text_offset",
                "text": "$tooltip_text",
                "size": "$text_size",
                "color": "$hover_text_color",
                "$hover_text_color|default": "white",
                "$text_size|default": ["default", "default"],
                "layer": 1,
                "shadow": true
              }
            }
          ]
        }
      }
    ]
  },

  /* Images */

  "default_tooltip_bg": {
    "type": "image",
    "texture": "textures/ui/purpleBorder"
  },

  "transparent_tooltip_bg": {
    "type": "image",
    "texture": "src/assets/img/white",
    "color": [0, 0, 0],
    "alpha": 0.5
  },

  /* Default */

  "tooltip@tooltip_mcjava.base_tooltip": {
    "$tooltip_text|default": "",
    "$tooltip_background": "tooltip_mcjava.default_tooltip_bg"
  },

  /* Transparent */

  "transparent_tooltip@tooltip_mcjava.base_tooltip": {
    "$base_size": ["100%c + 6px", "100%c + 5px"],
    "$tooltip_text|default": "",
    "$tooltip_background": "tooltip_mcjava.transparent_tooltip_bg"
  }
}