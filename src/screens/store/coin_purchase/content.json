{
  "namespace": "coin_purchase_content_mcjava",

  "coin_purchase_grid_0": {
    "type": "panel",
    "size": [ "fill", "100%" ],

    "collection_index": 0,
    "controls": [
      { "offer_item@coin_purchase_content_mcjava.offer_grid_item": {} }
    ]
  },

  "coin_purchase_grid_1": {
    "type": "panel",
    "size": [ "fill", "100%" ],
    "$coins_bg": "src/assets/img/coins_2",
    "collection_index": 1,
    "controls": [
      { "offer_item@coin_purchase_content_mcjava.offer_grid_item": {} }
    ]
  },

  "coin_purchase_grid_2": {
    "type": "panel",
    "size": [ "fill", "100%" ],
    "$coins_bg": "src/assets/img/coins_3",
    "collection_index": 2,
    "controls": [
      { "offer_item@coin_purchase_content_mcjava.offer_grid_item": {} }
    ]
  },

  "coin_purchase_grid_3": {
    "type": "panel",
    "size": [ "fill", "100%" ],
    "$coins_bg": "src/assets/img/coins_4",
    "collection_index": 3,
    "controls": [
      { "offer_item@coin_purchase_content_mcjava.offer_grid_item": {} }
    ]
  },

  "coin_purchase_grid_4": {
    "type": "panel",
    "size": [ "fill", "100%" ],
    "$coins_bg": "src/assets/img/coins_5",
    "collection_index": 4,
    "controls": [
      { "offer_item@coin_purchase_content_mcjava.offer_grid_item": {} }
    ]
  },

  "coin_purchase_grid": {
    "type": "grid",
    "grid_item_template": "coin_purchase_content_mcjava.offer_grid_item",
    "grid_dimension_binding": "#coin_offer_size",
    "collection_name": "coin_purchase_grid",
    "size": ["500%", "100%" ],
    "anchor_from": "top_left",
    "anchor_to": "top_left",
    "bindings": [
      {
        "binding_name": "#coin_offer_size"
      },
      {
        "binding_name": "#has_coin_offers",
        "binding_name_override": "#visible"
      }
    ]
  },

  "offer_grid_item": {
    "type": "panel",
    "size": "$grid_item_size",
    "$grid_item_size": [ "fill", "100%" ],
    "controls": [
      { "offer_item@coin_purchase_content_mcjava.offer_item": {} }
    ]
  },

  "offer_item": {
    "type": "panel",
    "anchor_from": "center",
    "anchor_to": "center",
    "size": [ "100% - 8px", "100%" ],
    "controls": [
      {
        "side_content_panel": {
          "type": "panel",
          "size": ["100%", "100%"],
          "clips_children": true,
          "controls": [
            { "top_shadow@common_mcjava.shadow_top": { } },
            { "background@common_mcjava.dark_dirt_background": {} },
            { "scroll@coin_purchase_content_mcjava.offer_panel": {} },
            {
              "currency_panel": {
                "type": "panel",
                "anchor_from": "bottom_middle",
                "offset": [0, -4],
                "anchor_to": "bottom_middle",
                "size": [ "100% - 4px", 20 ],
                "controls": [
                  {
                    "d@button_mcjava.button": {
                      "size": [ "100% - 4px",20 ],
                      "$button_content": "coin_purchase_content_mcjava.price",
                      "$pressed_button_name": "button.purchase_coins",
                      "bindings": [
                        {
                          "binding_type": "collection_details",
                          "binding_collection_name": "coin_purchase_grid"
                        }
                      ]
                    }
                  }
                ]
              }
            },
            { "bottom_shadow@common_mcjava.shadow_bottom": { } }
          ]
        }
      }
    ]
  },

  "offer_panel": {
    "type": "stack_panel",
    "size": [ "100% - 8px", "100% - 8px" ],
    "anchor_from": "top_middle",
    "offset": [0, 4],
    "anchor_to": "top_middle",
    "layer": 10,
    "controls": [
      {
        "offer_panel": {
          "type": "panel",
          "size": [ "100%", "100%c" ],
          "anchor_from": "top_middle",
          "anchor_to": "top_middle",
          "layer": 10,
          "controls": [
            {
              "image": {
                "type": "image",
                "texture": "$coins_bg",
                "size": [ "80%", "116.67%x" ],
                "anchor_from": "top_middle",
                "anchor_to": "top_middle",
                "layer": 2/* ,
                "bilinear": true *//* ,
                "bindings": [
                  {
                    "binding_type": "collection",
                    "binding_collection_name": "coin_purchase_grid",
                    "binding_name": "#coin_offer_texture_name",
                    "binding_name_override": "#texture"
                  },
                  {
                    "binding_type": "collection",
                    "binding_collection_name": "coin_purchase_grid",
                    "binding_name": "#coin_offer_texture_file_system",
                    "binding_name_override": "#texture_file_system"
                  }
                ] */
              }
            }
          ]
        }
      },
      {
        "padding_1": {
          "type": "panel",
          "size": [ "100%", 4 ]
        }
      },
      {
        "bonus_coins_stack": {
          "type": "stack_panel",
          "orientation": "vertical",
          "size": [ "100%", "100%c" ],
          "offset": [ 0, 0],
          "anchor_from": "bottom_middle",
          "anchor_to": "bottom_middle",
          "layer": 2,
          "controls": [
            {
              "price_panel": {
                "type": "panel",
                "layer": 1,
                "size": [ "100%", "100%c" ],
                "controls": [
                  {
                    "coins_stack_panel@coin_purchase.coins_stack_panel": {
                      "layer": 3
                    }
                  }
                ]
              }
            },
            {
              "plus_label": {
                "type": "panel",
                "size": [ "100%", 10 ],
                "controls": [
                  {
                    "plus_label": {
                      "type": "label",
                      "size": [ "default", 10 ],
                      "layer": 1,
                      "text": "+",
                      "color": "$store_white_text_color"
                    }
                  }
                ],
                "bindings": [
                  {
                    "binding_name": "#bonus_coins_visible",
                    "binding_name_override": "#visible",
                    "binding_type": "collection",
                    "binding_collection_name": "coin_purchase_grid"
                  }
                ]
              }
            },
            {
              "non_bonus_padding": {
                "type": "panel",
                "size": [ "100%", 21 ],
                "bindings": [
                  {
                    "binding_name": "(not #bonus_coins_visible)",
                    "binding_name_override": "#visible",
                    "binding_type": "collection",
                    "binding_collection_name": "coin_purchase_grid"
                  }
                ]
              }
            },
            {
              "bonus_label_panel": {
                "type": "panel",
                "size": [ "100%", 10 ],
                "bindings": [
                  {
                    "binding_name": "#bonus_coins_visible",
                    "binding_name_override": "#visible",
                    "binding_type": "collection",
                    "binding_collection_name": "coin_purchase_grid"
                  }
                ],
                "controls": [
                  {
                    "bonus_label": {
                      "type": "label",
                      "size": [ "default", "100%" ],
                      "text": "store.coin.bonus",
                      "color": "$coin_color",
                      "layer": 6
                    }
                  }
                ]
              }
            },
            {
              "padding_0": {
                "type": "panel",
                "size": [ "100%", 1 ]
              }
            },
            {
              "bonus_coin_panel": {
                "type": "stack_panel",
                "orientation": "horizontal",
                "size": [ "100%", 11 ],
                "layer": 7,
                "bindings": [
                  {
                    "binding_name": "#bonus_coins_visible",
                    "binding_name_override": "#visible",
                    "binding_type": "collection",
                    "binding_collection_name": "coin_purchase_grid"
                  }
                ],
                "controls": [
                  {
                    "fill_panel_0": {
                      "type": "panel",
                      "size": [ "fill", "100%" ]
                    }
                  },
                  {
                    "bonus_coin_label_panel": {
                      "type": "panel",
                      "size": [ "100%c", "100%" ],
                      "controls": [
                        {
                          "bonus_coins": {
                            "type": "label",
                            "layer": 3,
                            "text": "#bonus_coins",
                            "color": "$coin_color",
                            "size": [ "default", 10 ],
                            "bindings": [
                              {
                                "binding_name": "#bonus_coins",
                                "binding_type": "collection",
                                "binding_collection_name": "coin_purchase_grid"
                              }
                            ]
                          }
                        }
                      ]
                    }
                  },
                  {
                    "coin_panel": {
                      "type": "panel",
                      "size": [ "100%c", "100%" ],
                      "controls": [
                        {
                          "coin@common_store.coin_icon": {
                          }
                        }
                      ]
                    }
                  },
                  {
                    "fill_panel_1": {
                      "type": "panel",
                      "size": [ "fill", "100%" ]
                    }
                  }
                ]
              }
            },
            {
              "padding_1": {
                "type": "panel",
                "size": [ "100%", 2 ]
              }
            },
            {
              "padding_2": {
                "type": "panel",
                "size": [ "100%", 1 ]
              }
            }
          ]
        }
      }
    ]
  },

  "price": {
    "type": "label",
    "size": [ "default", 10 ],
    "color": "$text_color",
    "text": "#price_text",
    "layer": 5,
    "text_alignment": "center",
    "font_type": "default",
    "bindings": [
      {
        "binding_type": "collection",
        "binding_collection_name": "coin_purchase_grid",
        "binding_name": "#price_text"
      }
    ]
  }
}