{
  "namespace": "store_inventory_mcjava",

  "store_inventory_screen_content_panel@store_content_mcjava.store_screen_content_panel": {
    "$title_text": "Inventory",
    "$ignore_search": false,
    "$top_content": "store_content_mcjava.search_top_content",
    "$top_content_size": ["100%", 60],
    "$scrolling_content": "store_inventory_mcjava.scroll_content"
  },

  "scroll_content": {
    "type": "panel",
    "size": [ "100%", "100%c" ],
    "$store_offer_grid_prefix": "offer",
    "$store_offer_grid_collection_name": "offer_collection",
    "$search_offer_object|default": "store_offer_list_mcjava.store_offer_grid",
    "controls": [
      {
        "search_and_offer_content_scrolling_content@common.modal_area_panel_base": {
          "size": [ "100%", "100%c" ],
          "anchor_from": "left_middle",
          "anchor_to": "left_middle",
          "$modal_binding_name": "#search_screen_enabled",
          "$search_offer_content|default": "store_offer_list_mcjava.store_offer_grid",
          "$has_section_above_search_panel|default": false,
          "controls": [
            {
              "search_and_offer_panel": {
                "type": "panel",
                "size": [ "100% - 4px", "100%c" ],
                "controls": [
                  {
                    "search_and_offer_content": {
                      "type": "stack_panel",
                      "orientation": "vertical",
                      "size": [ "100%", "100%c + 2px" ],
                      "controls": [
                        {
                          "top_padding": {
                            "type": "panel",
                            "size": [ "100%", 4 ]
                          }
                        },
                        {
                          "offer_content_panel": {
                            "type": "panel",
                            "size": [ "100%", "100%c" ],
                            "controls": [
                              {
                                "offer_content@$search_offer_content": {}
                              }
                            ]
                          }
                        },
                        {
                          "bottom_padding": {
                            "type": "panel",
                            "size": [ "100%", 4 ]
                          }
                        }
                      ]
                    }
                  }
                ]
              }
            }
          ]
        }
      }
    ]
  }
}