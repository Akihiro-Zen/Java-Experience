{
  "namespace": "popup_mcjava",

  /* Default */

  "modal_dialog_popup": {
    "type": "panel",
    "$left_button_text": "#modal_left_button_text",
    "$right_button_text": "#modal_middle_button_text",
    "$cancel_button_text": "#modal_rightcancel_button_text",
    "variables": [
      {
        "requires": "$three_buttons_visible",
        "$button_panel": "popup_mcjava.three_buttons_panel"
      },
      {
        "requires": "$destructive_three_buttons_visible",
        "$button_panel": "popup_mcjava.destructive_three_buttons_panel"
      },
      {
        "requires": "$two_buttons_visible",
        "$button_panel": "popup_mcjava.two_buttons_panel"
      },
      {
        "requires": "$destructive_two_buttons_visible",
        "$button_panel": "popup_mcjava.destructive_two_buttons_panel"
      },
      {
        "requires": "$single_button_visible",
        "$button_panel": "popup_mcjava.single_button_panel"
      },
      {
        "requires": "$no_buttons_visible",
        "$button_panel": "common.empty_panel"
      }
    ],
    "controls": [
      {
        "modal_input@popup_dialog.modal_input_panel": {
          "$show_black_background|default": false,
          "controls": [
            {
              "modal_bg_buttons@popup_mcjava.modal_dialog_with_buttons": {
                "$visibility_source_control_name|default": "modal_bg_buttons",
                "layer": 2
              }
            },
            {
              "dirt_background@common_mcjava.dirt_background": {
                "layer": 1
              }
            }
          ]
        }
      }
    ]
  },

  "three_buttons_panel": {
    "type": "panel",
    "anchor_to": "bottom_middle",
    "anchor_from": "bottom_middle",
    "size": [ "100%-14px", 90 ],
    "offset": [ 0, -7 ],
    "controls": [
      { "modal_left_button@modal_left_button": { "size": [150, 20] } },
      { "modal_right_button@modal_right_button": { "size": [150, 20], "$btn_anchor": "top_middle" } },
      { "modal_cancel_button@modal_cancel_button": { "size": [200, 20], "offset": [0, 24], "$btn_anchor": "top_middle" } }
    ]
  },

  "destructive_three_buttons_panel": {
    "type": "panel",
    "anchor_to": "bottom_middle",
    "anchor_from": "bottom_middle",
    "size": [ "100%-14px", 90 ],
    "offset": [ 0, -7 ],
    "controls": [
      { "modal_left_button@modal_left_button": { "size": [150, 20] } },
      { "modal_right_button@modal_right_button": { "size": [150, 20], "$btn_anchor": "top_middle" } },
      { "modal_cancel_button@modal_cancel_button": { "size": [200, 20], "offset": [0, 24], "$btn_anchor": "top_middle" } }
    ]
  },

  "two_buttons_panel": {
    "type": "stack_panel",
    "anchor_to": "center",
    "anchor_from": "center",
    "size": [310, 20 ],
    "orientation": "horizontal",
    "controls": [
      { "left@popup_mcjava.modal_left_button": {} },
      { "space@common_mcjava.hfill": {} },
      { "right@popup_mcjava.modal_cancel_button": {} }
    ]
  },

  "destructive_two_buttons_panel": {
    "type": "stack_panel",
    "anchor_to": "center",
    "anchor_from": "center",
    "size": [310, 20],
    "orientation": "horizontal",
    "controls": [
      { "left@popup_mcjava.modal_left_button": {} },
      { "space@common_mcjava.hfill": {} },
      { "right@popup_mcjava.modal_cancel_button": {} }
    ]
  },

  "single_button_panel": {
    "type": "panel",
    "anchor_to": "center",
    "anchor_from": "center",
    "size": [200, 20],
    "orientation": "horizontal",
    "controls": [
      { "left@popup_mcjava.modal_middle_button": { "size": [200, 20] } }
    ]
  },

  /* Main Menu */

  "quit_game_modal@popup_mcjava.base_modal": {
    "$modal_title": "popup.quitGame.question",
    "$modal_content": "popup_mcjava.modal_content_common",
    "$two_buttons": true,
    "$left_button_text": "gui.yes",
    "$cancel_button_text": "gui.no"
  },

  /* Death Menu */

  "death_confirm_modal@popup_mcjava.base_modal": {
    "$modal_title": "popup.deathConfirm.question",
    "$modal_content": "popup_mcjava.modal_content_common",
    "$two_buttons": true,
    "$left_button_text": "deathScreen.titleScreen",
    "$cancel_button_text": "gui.no"
  },

  /* Pause Menu */

  "feedback_modal@popup_mcjava.base_modal": {
    "$modal_title": "popup.feedback.question",
    "$modal_content": "popup_mcjava.modal_content_common",
    "$three_buttons_aline": true,
    "$left_button_text": "Suggestion",
    "$right_button_text": "Report Bugs",
    "$cancel_button_text": "Feedback"
  },

  /* Reset Settings */

  "reset_settings_modal@popup_mcjava.base_modal": {
    "$modal_content": "popup_mcjava.modal_content_common",
    "$two_buttons": true,
    "$left_button_text": "gui.yes",
    "$cancel_button_text": "gui.no"
  },

  "reset_accessibility_settings_modal@popup_mcjava.reset_settings_modal": {
   "$modal_title": "popup.resetSettings.accessibility"
  },

  "reset_sounds_settings_modal@popup_mcjava.reset_settings_modal": {
   "$modal_title": "popup.resetSettings.audio"
  },

  "reset_video_settings_modal@popup_mcjava.reset_settings_modal": {
   "$modal_title": "popup.resetSettings.video"
  },

  "reset_mouse_settings_modal@popup_mcjava.reset_settings_modal": {
   "$modal_title": "popup.resetSettings.mouse"
  },

  "reset_controller_settings_modal@popup_mcjava.reset_settings_modal": {
   "$modal_title": "popup.resetSettings.controller"
  },

  "reset_touch_settings_modal@popup_mcjava.reset_settings_modal": {
   "$modal_title": "popup.resetSettings.touch"
  },

  /* Content */

  "base_modal": {
    "type": "panel",
    "controls": [
      {
        "modal_input@popup_dialog.modal_input_panel": {
          "$show_black_background|default": false,
          "controls": [
            { "$modal_content@$modal_content": {} },
            {
              "dirt_background@common_mcjava.dirt_background": {
                "layer": 1
              }
            }
          ]
        }
      }
    ]
  },

  "modal_content_common": {
    "type": "panel",
    "controls": [
      { "@popup_mcjava.modal_title": {} },
      { "@popup_mcjava.modal_buttons_panel": {} }
    ]
  },

  "modal_title": {
    "type": "label",
    "text": "$modal_title",
    "offset": "$title_text_offset",
    "$title_text_offset|default": [ 0, "-18%" ],
    "size": [ "70%", 15 ],
    "$title_text_anchor|default": "center",
    "$title_text_alignment|default": "center",
    "anchor_to": "$title_text_anchor",
    "anchor_from": "$title_text_anchor",
    "text_alignment": "$title_text_alignment",
    "layer": 2,
    "color": "white",
    "shadow": true
  },

  "modal_buttons_panel": {
    "type": "panel",
    "$one_button|default": false,
    "$two_buttons|default": false,
    "$three_buttons|default": false,
    "$three_buttons_aline|default": false,
    "variables": [
      {
        "requires": "$one_button",
        "$buttons_panel": "popup_mcjava.modal_one_button_panel"
      },
      {
        "requires": "$two_buttons",
        "$buttons_panel": "popup_mcjava.modal_two_buttons_panel"
      },
      {
        "requires": "$three_buttons",
        "$buttons_panel": "popup_mcjava.modal_three_buttons_panel"
      },
      {
        "requires": "$three_buttons_aline",
        "$buttons_panel": "popup_mcjava.modal_three_buttons_aline_panel"
      }
    ],
    "controls": [
      { "$buttons_panel@$buttons_panel": {} }
    ]
  },

  "modal_one_button_panel": {
    "type": "panel",
    "size": [310, 20],
    "anchor_to": "center",
    "anchor_from": "center",
    "controls": [
      { "modal_right_button@modal_right_button": { "$btn_anchor": "top_right", "size": [200, 20] } }
    ]
  },

  "modal_two_buttons_panel": {
    "type": "panel",
    "size": [310, 20],
    "anchor_to": "center",
    "anchor_from": "center",
    "controls": [
      { "modal_left_button@modal_left_button": {} },
      { "modal_cancel_button@modal_cancel_button": { "$btn_anchor": "top_right" } }
    ]
  },

  "modal_three_buttons_aline_panel": {
    "type": "panel",
    "size": [310, 20],
    "anchor_to": "center",
    "anchor_from": "center",
    "controls": [
      { "modal_left_button@modal_left_button": { "size": [98, 20] } },
      { "modal_right_button@modal_right_button": { "size": [98, 20], "$btn_anchor": "top_middle" } },
      { "modal_cancel_button@modal_cancel_button": { "size": [98, 20], "$btn_anchor": "top_right" } },
      { "cancel@common_mcjava.exit_button": { "size": [200, 20], "offset": [0, 24], "$pressed_button_name": "$popup_dialog_escape_button_name" } }
    ]
  },

  "modal_left_button@button_mcjava.button": {
    "anchor_to": "top_left",
    "anchor_from": "top_left",
    "size": [ 150, 20 ],
    "$pressed_button_name": "$popup_dialog_left_button_name",
    "$button_text": "$left_button_text",
    "$left_focus_number|default": 0,
    "default_focus_precedence": "$left_focus_number"
  },

  "modal_right_button@button_mcjava.button": {
    "anchor_to": "$btn_anchor",
    "anchor_from": "$btn_anchor",
    "size": [ 150, 20 ],
    "$pressed_button_name": "$popup_dialog_middle_button_name",
    "$button_text": "$right_button_text",
    "$middle_focus_number|default": 0,
    "default_focus_precedence": "$middle_focus_number"
  },

  "modal_cancel_button@button_mcjava.button": {
    "anchor_to": "$btn_anchor",
    "anchor_from": "$btn_anchor",
    "size": [ 150, 20 ],
    "$pressed_button_name": "$popup_dialog_rightcancel_button_name",
    "$button_text": "$cancel_button_text",
    "$right_focus_number|default": 1,
    "default_focus_precedence": "$right_focus_number"
  },

  /* Default */

  "modal_dialog_with_buttons": {
    "type": "panel",
    "anchor_to": "center",
    "anchor_from": "center",
    "size": "$modal_screen_size",
    "controls": [
      { "title@popup_mcjava.modal_title_text": {} },
      { "button_panel@$button_panel": {} }
    ]
  },

  "modal_title_text": {
    "type": "label",
    "offset": "$title_text_offset",
    "$title_text_offset|default": [ 0, "-18%" ],
    "size": [ "70%", 15 ],
    "$title_text_anchor|default": "center",
    "$title_text_alignment|default": "center",
    "anchor_to": "$title_text_anchor",
    "anchor_from": "$title_text_anchor",
    "text_alignment": "$title_text_alignment",
    "layer": 2,
    "text": "#text",
    "color": "white",
    "shadow": true,
    "bindings": [
      {
        "binding_type": "view",
        "source_control_name": "$visibility_source_control_name",
        "source_property_name": "#modal_title_text",
        "target_property_name": "#text"
      }
    ]
  }
}