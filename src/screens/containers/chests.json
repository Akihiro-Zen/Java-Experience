{
  "namespace": "chests_mcjava",
  
  "small_chest_screen_content_panel@container_mcjava.base_panel": {
    "$container_bg": "chests_mcjava.chest_container_bg",
    "$container_size": [176, 167],
    "$specified_content": "chests_mcjava.chests_content_panel",
    "$grid_dimensions": [ 9, 3 ],
    "$grid_size": [ 162, 54 ],
    "$invlabel_offset": [ 1, -11 ]
  },

  "large_chest_screen_content_panel@container_mcjava.base_panel": {
    "$container_bg": "chests_mcjava.large_chest_container_bg",
    "$container_size": [176, 221],
    "$specified_content": "chests_mcjava.chests_content_panel",
    "$grid_dimensions": [ 9, 6 ],
    "$grid_size": [ 162, 108 ],
    "$invlabel_offset": [ 1, -11 ]
  },

  "ender_chest_screen_content_panel@chests_mcjava.small_chest_screen_content_panel": {
    "$invlabel_offset": [ 1, -12 ]
  },

  "barrel_screen_content_panel@chests_mcjava.small_chest_screen_content_panel": {
    "$invlabel_offset": [ 1, -12 ]
  },

  "shulker_box_screen_content_panel@chests_mcjava.small_chest_screen_content_panel": {
    "$container_size": [176, 166],
    "$container_bg": "chests_mcjava.shulker_box_container_bg"
  },

  /* Content */

  "chests_content_panel": {
    "type": "panel",
    "controls": [
      { "title@container_mcjava.title": { "offset": [8, 5] } },
      { "grid@chests_mcjava.chest_grid": {} }
    ]
  },

  "chest_grid_item@container_mcjava.container_slot": {
    "$item_collection_name": "container_items"
  },

  "chest_grid": {
    "type": "grid",
    "anchor_from": "top_left",
    "grid_dimensions": "$grid_dimensions",
    "size": "$grid_size",
    "offset": [ 7, 17 ],
    "grid_item_template": "chests_mcjava.chest_grid_item",
    "anchor_to": "top_left",
    "collection_name": "container_items"
  },

  /* Backgrounds */

  "large_chest_container_bg@common_mcjava.image": {
    "$texture_src": "assets/minecraft/textures/gui/container/generic_54",
    "size": [176, 222],
    "uv": [0, 0],
    "variables": [
      { "requires": "($chest_resolution = 256x)", "$1": [176, 222] },
      { "requires": "($chest_resolution = 512x)", "$1": [352, 444] },
      { "requires": "($chest_resolution = 1024x)", "$1": [704, 888] },
      { "requires": "($chest_resolution = 2048x)", "$1": [1408, 1776] },
      { "requires": "($chest_resolution = 4096x)", "$1": [2816, 3552] }
    ]
  },

  "chest_container_bg": {
    "type": "stack_panel",
    "size": [176, 167],
    "$texture_src": "assets/minecraft/textures/gui/container/generic_54",
    "controls": [
      {
        "top@common_mcjava.image": {
          "size": [176, 71],
          "uv": [0, 0],
          "variables": [
            { "requires": "($chest_resolution = 256x)", "$1": [176, 71] },
            { "requires": "($chest_resolution = 512x)", "$1": [352, 142] },
            { "requires": "($chest_resolution = 1024x)", "$1": [704, 274] },
            { "requires": "($chest_resolution = 2048x)", "$1": [1408, 548] },
            { "requires": "($chest_resolution = 4096x)", "$1": [2816, 1096] }
          ]
        }
      },
      {
        "bottom@common_mcjava.image": {
          "size": [176, 96],
          "variables": [
            { "requires": "($chest_resolution = 256x)", "$0": [0, 126], "$1": [176, 96] },
            { "requires": "($chest_resolution = 512x)", "$0": [0, 252], "$1": [352, 192] },
            { "requires": "($chest_resolution = 1024x)", "$0": [0, 504], "$1": [704, 384] },
            { "requires": "($chest_resolution = 2048x)", "$0": [0, 1008], "$1": [1408, 768] },
            { "requires": "($chest_resolution = 4096x)", "$0": [0, 2016], "$1": [2816, 1536] }
          ]
        }
      }
    ]
  },
  
  "shulker_box_container_bg@common_mcjava.image": {
    "$texture_src": "assets/minecraft/textures/gui/container/shulker_box",
    "size": [176, 166],
    "uv": [0, 0],
    "variables": [
      { "requires": "($shulker_box_resolution = 256x)", "$1": [176, 166] },
      { "requires": "($shulker_box_resolution = 512x)", "$1": [352, 332] },
      { "requires": "($shulker_box_resolution = 1024x)", "$1": [704, 664] },
      { "requires": "($shulker_box_resolution = 2048x)", "$1": [1408, 1328] },
      { "requires": "($shulker_box_resolution = 4096x)", "$1": [2816, 2656] }
    ]
  }
}