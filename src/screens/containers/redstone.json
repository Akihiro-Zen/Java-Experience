{
  "namespace": "redstone_mcjava",

  "dispenser_screen_content_panel@container_mcjava.base_panel": {
    "$container_bg": "redstone_mcjava.dispenser_container_bg",
    "$specified_content": "redstone_mcjava.redstone_content_panel",
    "$grid_dimensions": [3, 3],
    "$grid_offset": [0, 16]
  },

  "dropper_screen_content_panel@redstone_mcjava.dispenser_screen_content_panel": {
  },

  "hopper_screen_content_panel@container_mcjava.base_panel": {
    "$container_size": [176, 133],
    "$container_bg": "redstone_mcjava.hopper_container_bg",
    "$specified_content": "redstone_mcjava.redstone_content_panel",
    "$title_anchor": "top_left",
    "$title_offset": [8, 5],
    "$grid_dimensions": [5, 1],
    "$grid_offset": [0, 19]
  },

  /* Content */

  "redstone_content_panel": {
    "type": "panel",
    "$title_anchor|default": "top_middle",
    "$title_offset|default": [0, 5],
    "controls": [
      {
        "title@container_mcjava.title": {
          "offset": "$title_offset",
          "anchor_from": "$title_anchor",
          "anchor_to": "$title_anchor"
        }
      },
      { "grid@redstone_mcjava.redstone_grid": {} }
    ]
  },

  "redstone_grid": {
    "type": "grid",
    "anchor_from": "top_middle",
    "anchor_to": "top_middle",
    "collection_name": "container_items",
    "grid_item_template": "container_mcjava.container_slot",
    "$item_collection_name": "container_items",
    "offset": "$grid_offset",
    "grid_dimensions": "$grid_dimensions"
  },

  /* Bgs */

  "dispenser_container_bg@common_mcjava.image": {
    "$texture_src": "assets/minecraft/textures/gui/container/dispenser",
    "size": [176, 166],
    "uv": [0, 0],
    "variables": [
      { "requires": "($dispenser_resolution = 256x)", "$1": [176, 166] },
      { "requires": "($dispenser_resolution = 512x)", "$1": [352, 332] },
      { "requires": "($dispenser_resolution = 1024x)", "$1": [704, 664] },
      { "requires": "($dispenser_resolution = 2048x)", "$1": [1408, 1328] },
      { "requires": "($dispenser_resolution = 4096x)", "$1": [2816, 2656] }
    ]
  },

  "hopper_container_bg@common_mcjava.image": {
    "$texture_src": "assets/minecraft/textures/gui/container/hopper",
    "size": [176, 133],
    "uv": [0, 0],
    "variables": [
      { "requires": "($hopper_resolution = 256x)", "$1": [176, 133] },
      { "requires": "($hopper_resolution = 512x)", "$1": [352, 266] },
      { "requires": "($hopper_resolution = 1024x)", "$1": [704, 532] },
      { "requires": "($hopper_resolution = 2048x)", "$1": [1408, 1064] },
      { "requires": "($hopper_resolution = 4096x)", "$1": [2816, 2128] }
    ]
  }
}