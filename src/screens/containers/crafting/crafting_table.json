{
  "namespace": "crafting_table_mcjava",
  
  "crafting_table_screen_content_panel@crafting_mcjava.base_screen_content_panel": {
    "$specified_content": "crafting_table_mcjava.crafting_table_content_panel",
    "$texture_src": "assets/minecraft/textures/gui/container/crafting_table"
  },

  "crafting_table_content_panel": {
    "type": "panel",
    "size": [176, 166],
    "$button_ref": "container_mcjava.container_slot_button_prototype",
    "controls": [
      { "bg@crafting_table_mcjava.crafting_table_bg": {} },
      { "crafting_text@crafting_content_mcjava.crafting_text": { "offset": [ 29, 5.5 ] } },
      { "crafting_grid@crafting_table_mcjava.crafting_table_grid": {} },
      { "@crafting_content_mcjava.crafting_arrow_button": {} },
      { "output_grid@crafting_table_mcjava.crafting_table_output_grid": {} },
      { "recipe_book_toggle@recipe_book_mcjava.recipe_book_button": { "offset": [ 5, 34 ] } },
      { "inventory_grid_panel@container_mcjava.inventory_grid_panel": {} },
      { "hotbar_grid@container_mcjava.hotbar_grid": {} }
    ]
  },

  /* Content */

  "crafting_table_bg@common_mcjava.image": {
    "size": [176, 166],
    "uv": [0, 0],
    "variables": [
      { "requires": "($crafting_table_resolution = 256x)", "$1": [176, 166] },
      { "requires": "($crafting_table_resolution = 512x)", "$1": [352, 332] },
      { "requires": "($crafting_table_resolution = 1024x)", "$1": [704, 664] },
      { "requires": "($crafting_table_resolution = 2048x)", "$1": [1408, 1328] },
      { "requires": "($crafting_table_resolution = 4096x)", "$1": [2816, 2656] }
    ]
  },

  "crafting_table_grid": {
    "type": "grid",
    "size": [ 54, 54 ],
    "anchor_from": "top_left",
    "anchor_to": "top_left",
    "offset": [ 29, 16 ],
    "grid_dimensions": [ 3, 3 ],
    "collection_name": "crafting_input_items",
    "controls": [
      {
        "crafting_input_item_top_left@crafting_content_mcjava.crafting_input_grid_item": {
          "grid_position": [ 0, 0 ],
          "$focus_id_binding_type": "none",
          "$focus_id": "crafting_input_top_left",
          "$focus_left_binding_type": "none",
          "$focus_left": "armor_item_head"
        }
      },
      {
        "crafting_input_item_top_mid@crafting_content_mcjava.crafting_input_grid_item": {
          "grid_position": [ 1, 0 ]
        }
      },
      {
        "crafting_input_item_top_right@crafting_content_mcjava.crafting_input_grid_item": {
          "grid_position": [ 2, 0 ]
        }
      },
      {
        "crafting_input_item_mid_left@crafting_content_mcjava.crafting_input_grid_item": {
          "grid_position": [ 0, 1 ],
          "$focus_id_binding_type": "none",
          "$focus_id": "crafting_input_mid_left",
          "$focus_left_binding_type": "none",
          "$focus_left": "armor_item_legs"
        }
      },
      {
        "crafting_input_item_middle@crafting_content_mcjava.crafting_input_grid_item": {
          "grid_position": [ 1, 1 ]
        }
      },
      {
        "crafting_input_item_mid_right@crafting_content_mcjava.crafting_input_grid_item": {
          "grid_position": [ 2, 1 ]
        }
      },
      {
        "crafting_input_item_bot_left@crafting_content_mcjava.crafting_input_grid_item": {
          "grid_position": [ 0, 2 ]
        }
      },
      {
        "crafting_input_item_bot_mid@crafting_content_mcjava.crafting_input_grid_item": {
          "grid_position": [ 1, 2 ]
        }
      },
      {
        "crafting_input_item_bot_right@crafting_content_mcjava.crafting_input_grid_item": {
          "grid_position": [ 2, 2 ],
          "$focus_right_binding_type": "none",
          "$focus_right": "crafting_output_item"
        }
      }
    ]
  },

  "crafting_table_output_grid": {
    "type": "grid",
    "grid_dimensions": [ 1, 1 ],
    "collection_name": "crafting_output_items",
    "anchor_from": "top_left",
    "anchor_to": "top_left",
    "offset": [ 123, 34 ],
    "size": [ 18, 18 ],
    "controls": [
      {
        "work_bench_output@crafting_content_mcjava.inventory_container_item": {
          "$item_collection_name": "crafting_output_items",
          "$button_ref": "crafting_content_mcjava.output_no_coalesce_container_slot_button",
          "$stack_count_binding_condition": "always",
          "$item_renderer_binding_condition": "always",
          "$background_images": "crafting_content_mcjava.crafting_container_cell_images",
          "$focus_id_binding_type": "none",
          "$red_cell_size": [ 24, 24 ],
          "$focus_id": "crafting_output_item",
          "$focus_right_binding_type": "none",
          "$focus_right": "FOCUS_OVERRIDE_STOP"
        }
      }
    ]
  }
}