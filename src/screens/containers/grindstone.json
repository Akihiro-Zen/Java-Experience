{
  "namespace": "grindstone_mcjava",

  "grindstone_screen_content_panel@container_mcjava.base_panel": {
    "$container_bg": "grindstone_mcjava.grindstone_container_bg",
    "$specified_content": "grindstone_mcjava.grindstone_content_panel",
    "$texture_src": "assets/minecraft/textures/gui/container/grindstone"
  },

  "grindstone_content_panel": {
    "type": "panel",
    "controls": [
      {
        "title@container_mcjava.title": { 
          "offset": [ 8, 3 ], 
          "text": "container.grindstone_title" 
        } 
      },
      { "input@grindstone_mcjava.input_item_slot": {} },
      { "additional@grindstone_mcjava.additional_item_slot": {} },
      { "result@grindstone_mcjava.result_item_slot": {} },
      { "cross_out@grindstone_mcjava.cross_out_icon": {} }
    ]
  },

  /* Content */

   /* Images */

   "grindstone_container_bg@common_mcjava.image": {
    "size": [176, 166],
    "uv": [0, 0],
    "variables": [
      { "requires": "($grindstone_resolution = 256x)", "$1": [176, 166] },
      { "requires": "($grindstone_resolution = 512x)", "$1": [352, 332] },
      { "requires": "($grindstone_resolution = 1024x)", "$1": [704, 664] },
      { "requires": "($grindstone_resolution = 2048x)", "$1": [1408, 1328] },
      { "requires": "($grindstone_resolution = 4096x)", "$1": [2816, 2656] }
    ]
  },

  "cross_out_icon@common_mcjava.image": {
    "size": [28, 21],
    "offset": [92, 31],
    "layer": 3,
    "variables": [
      { "requires": "($grindstone_resolution = 256x)", "$0": [176, 0], "$1": [28, 21] },
      { "requires": "($grindstone_resolution = 512x)", "$0": [352, 0], "$1": [56, 42] },
      { "requires": "($grindstone_resolution = 1024x)", "$0": [704, 0], "$1": [112, 84] },
      { "requires": "($grindstone_resolution = 2048x)", "$0": [1408, 0], "$1": [224, 168] },
      { "requires": "($grindstone_resolution = 4096x)", "$0": [2816, 0], "$1": [448, 336] }
    ],
    "bindings": [
      {
        "binding_name": "#cross_out_icon",
        "binding_name_override": "#visible"
      }
    ]
  },

  /* #Ended */

  "grindstone_item_slot@container_mcjava.container_slot": {
    "anchor_from": "top_left",
    "anchor_to": "top_left"
  },

  "input_item_slot@grindstone_mcjava.grindstone_item_slot": {
    "offset": [ 48, 18 ],
    "$item_collection_name": "grindstone_input_items",
    "$focus_id_binding_type": "none",
    "$focus_id": "grindstone_input",
    "$focus_down_binding_type": "none",
    "$focus_down": "grindstone_additional",
    "$focus_right_binding_type": "none",
    "$focus_right": "grindstone_result"
  },

  "additional_item_slot@grindstone_mcjava.grindstone_item_slot": {
    "offset": [ 48, 39 ], 
    "$item_collection_name": "grindstone_additional_items",
    "$focus_id_binding_type": "none",
    "$focus_id": "grindstone_additional",
    "$focus_up_binding_type": "none",
    "$focus_up": "grindstone_input",
    "$focus_right_binding_type": "none",
    "$focus_right": "grindstone_result"
  },

  "result_item_slot@grindstone_mcjava.grindstone_item_slot": {
    "offset": [ 128, 33 ],
    "$item_collection_name": "grindstone_result_items",
    "$button_ref": "grindstone_mcjava.grindstone_output_slot_button",
    "$focus_id_binding_type": "none",
    "$focus_id": "grindstone_result",
    "$focus_left_binding_type": "none",
    "$focus_left": "grindstone_additional"
  },
  
  "grindstone_output_slot_button@container_mcjava.container_slot_button_prototype": {
    "button_mappings": [
      {
        "from_button_id": "button.menu_select",
        "to_button_id": "button.grindstone_take_all_place_all",
        "mapping_type": "pressed"
      },
      {
        "from_button_id": "button.menu_ok",
        "to_button_id": "button.grindstone_take_all_place_all",
        "mapping_type": "pressed"
      },
      {
        "from_button_id": "button.menu_secondary_select",
        "to_button_id": "button.grindstone_take_all_place_all",
        "mapping_type": "pressed"
      },
      {
        "from_button_id": "button.controller_select",
        "to_button_id": "button.grindstone_take_all_place_all",
        "mapping_type": "pressed"
      },
      {
        "from_button_id": "button.menu_auto_place",
        "to_button_id": "button.container_auto_place",
        "mapping_type": "pressed"
      },
      {
        "from_button_id": "button.controller_secondary_select",
        "to_button_id": "button.container_auto_place",
        "mapping_type": "pressed"
      },
      {
        "from_button_id": "button.menu_inventory_drop",
        "to_button_id": "button.drop_one",
        "mapping_type": "pressed"
      },
      {
        "from_button_id": "button.menu_inventory_drop_all",
        "to_button_id": "button.drop_all",
        "mapping_type": "pressed"
      },
      {
        "from_button_id": "button.menu_select",
        "to_button_id": "button.grindstone_coalesce_stack",
        "mapping_type": "double_pressed"
      },
      {
        "from_button_id": "button.menu_ok",
        "to_button_id": "button.grindstone_coalesce_stack",
        "mapping_type": "double_pressed"
      },
      {
        "to_button_id": "button.container_slot_hovered",
        "mapping_type": "pressed"
      }
    ]
  }
}