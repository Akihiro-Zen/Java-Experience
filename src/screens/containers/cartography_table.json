{
  "namespace": "cartography_table_mcjava",

  "cartography_table_screen_content_panel@container_mcjava.base_panel": {
    "$container_bg": "cartography_table_mcjava.cartography_table_container_bg",
    "$specified_content": "cartography_table_mcjava.cartography_table_content_panel",
    "$texture_src": "assets/minecraft/textures/gui/container/cartography_table"
  },

  "cartography_table_content_panel": {
    "type": "panel",
    "controls": [
      {
        "title@container_mcjava.title": {
          "offset": [8, 3],
          "text": "container.cartography_table"
        }
      },
      { "input@cartography_table_mcjava.input_item_slot": {} },
      { "show_textbox@cartography_table_mcjava.textbox_button": {} },
      { "additional@cartography_table_mcjava.additional_item_slot": {} },
      { "result@cartography_table_mcjava.result_item_slot": {} },
      { "maps@cartography_table_mcjava.maps_panel": {} },
      { "text_edit_control@cartography_table_mcjava.text_edit_control": {} }
    ]
  },
  
  "maps_panel": {
    "type": "panel",
    "size": [ 66, 66 ],
    "anchor_from": "top_left",
    "anchor_to": "top_left",
    "offset": [ 67, 13 ],
    "controls": [
      { "none@cartography_table_mcjava.none_map_image": {} },
      { "copy@cartography_table_mcjava.clone_map_panel": {} },
      { "rename@cartography_table_mcjava.rename_map_image": {} },
      { "default@cartography_table_mcjava.default_map_image": {} },
      { "locator@cartography_table_mcjava.locator_map_image": {} },
      { "zoom@cartography_table_mcjava.zoom_map_image": {} },
      { "lock@cartography_table_mcjava.lock_map_image": {} },
      { "locked_icon@cartography_table_mcjava.locked_icon_image": {} }
    ],
    "bindings": [
      {
        "binding_type": "view",
        "source_control_name": "textbox_view",
        "source_property_name": "(not #toggle_state)",
        "target_property_name": "#visible"
      }
    ]
  },

  /* Content */

  /* Images */

  "cartography_table_container_bg@common_mcjava.image": {
    "size": [176, 166],
    "uv": [0, 0],
    "variables": [
      { "requires": "($cartography_table_resolution = 256x)", "$1": [176, 166] },
      { "requires": "($cartography_table_resolution = 512x)", "$1": [352, 332] },
      { "requires": "($cartography_table_resolution = 1024x)", "$1": [704, 664] },
      { "requires": "($cartography_table_resolution = 2048x)", "$1": [1408, 1328] },
      { "requires": "($cartography_table_resolution = 4096x)", "$1": [2816, 2656] }
    ]
  },

  "map_image@common_mcjava.image": {
    "size": [66, 66],
    "layer": 3,
    "variables": [
      { "requires": "($cartography_table_resolution = 256x)", "$0": [176, 0], "$1": [66, 66] },
      { "requires": "($cartography_table_resolution = 512x)", "$0": [352, 0], "$1": [132, 132] },
      { "requires": "($cartography_table_resolution = 1024x)", "$0": [704, 0], "$1": [264, 264] },
      { "requires": "($cartography_table_resolution = 2048x)", "$0": [1408, 0], "$1": [528, 528] },
      { "requires": "($cartography_table_resolution = 4096x)", "$0": [2816, 0], "$1": [1056, 1056] }
    ],
    "bindings": [
      {
        "binding_name": "$map_binding_name",
        "binding_name_override": "#visible"
      }
    ]
  },

  "locked_icon_image@cartography_table_mcjava.map_image": {
    "variables": [
      { "requires": "($cartography_table_resolution = 256x)", "$0": [1, 166], "$1": [66, 66] },
      { "requires": "($cartography_table_resolution = 512x)", "$0": [2, 332], "$1": [132, 132] },
      { "requires": "($cartography_table_resolution = 1024x)", "$0": [4, 664], "$1": [264, 264] },
      { "requires": "($cartography_table_resolution = 2048x)", "$0": [8, 1328], "$1": [528, 528] },
      { "requires": "($cartography_table_resolution = 4096x)", "$0": [16, 2656], "$1": [1056, 1056] }
    ],
    "layer": 7,
    "$map_binding_name": "#is_locked_mode"
  },

  "none_map_image@cartography_table_mcjava.map_image": {
    "$map_binding_name": "#is_none_mode"
  },

  "clone_map_panel": {
    "type": "panel",
    "variables": [
      { "requires": "($cartography_table_resolution = 256x)", "$0": [176, 132], "$1": [50, 50] },
      { "requires": "($cartography_table_resolution = 512x)", "$0": [352, 264], "$1": [100, 100] },
      { "requires": "($cartography_table_resolution = 1024x)", "$0": [704, 528], "$1": [200, 200] },
      { "requires": "($cartography_table_resolution = 2048x)", "$0": [1408, 1056], "$1": [400, 400] },
      { "requires": "($cartography_table_resolution = 4096x)", "$0": [2816, 2112], "$1": [800, 800] }
    ],
    "controls": [
      {
        "map_image_top@cartography_table_mcjava.map_image": {
          "anchor_from": "top_right", 
          "anchor_to": "top_right",
          "size": [50, 50]
        }
      },
      {
        "map_image_bottom@cartography_table_mcjava.map_image": {        
          "anchor_from": "bottom_left", 
          "anchor_to": "bottom_left",
          "size": [50, 50],
          "layer": 6
        }
      }
    ],
    "$map_binding_name": "#is_clone_mode"
  },

  "default_map_image@cartography_table_mcjava.map_image": {
    "$map_binding_name": "#is_basic_map_mode"
  },

  "locator_map_image@cartography_table_mcjava.map_image": {
    "$map_binding_name": "#is_locator_map_mode"
  },

  "rename_map_image@cartography_table_mcjava.map_image": {
    "$map_binding_name": "#is_rename_mode"
  },

  "zoom_map_image@cartography_table_mcjava.map_image": {
    "variables": [
      { "requires": "($cartography_table_resolution = 256x)", "$0": [176, 66], "$1": [66, 66] },
      { "requires": "($cartography_table_resolution = 512x)", "$0": [352, 132], "$1": [132, 132] },
      { "requires": "($cartography_table_resolution = 1024x)", "$0": [704, 264], "$1": [264, 264] },
      { "requires": "($cartography_table_resolution = 2048x)", "$0": [1408, 528], "$1": [528, 528] },
      { "requires": "($cartography_table_resolution = 4096x)", "$0": [2816, 1056], "$1": [1056, 1056] }
    ],
    "$map_binding_name": "#is_extend_mode"
  },

  "lock_map_image@cartography_table_mcjava.map_image": {
    "$map_binding_name": "#is_locked_mode"
  },

  /* #Ended */

  "cartography_item_slot@container_mcjava.container_slot": {
    "anchor_from": "top_left",
    "anchor_to": "top_left"
  },

  "input_item_slot@cartography_table_mcjava.cartography_item_slot": {
    "offset": [ 14, 14 ],
    "$item_collection_name": "cartography_input_items",
    "$focus_id_binding_type": "none",
    "$focus_id": "cartography_input",
    "$focus_down_binding_type": "none",
    "$focus_down": "cartography_additional",
    "$focus_left_binding_type": "none",
    "$focus_left": "show_textbox_button",
    "$focus_right_binding_type": "none",
    "$focus_right": "cartography_result"
  },

  "additional_item_slot@cartography_table_mcjava.cartography_item_slot": {
    "offset": [ 14, 51 ],
    "$item_collection_name": "cartography_additional_items",
    "$focus_id_binding_type": "none",
    "$focus_id": "cartography_additional",
    "$focus_up_binding_type": "none",
    "$focus_up": "cartography_input",
    "$focus_left": "show_textbox_button",
    "$focus_right_binding_type": "none",
    "$focus_left_binding_type": "none",
    "$focus_right": "cartography_result"
  },

  "result_item_slot@cartography_table_mcjava.cartography_item_slot": {
    "offset": [ 144, 38 ],
    "$item_collection_name": "cartography_result_items",
    "$button_ref": "cartography_table_mcjava.cartography_table_output_slot_button",
    "$focus_id_binding_type": "none",
    "$focus_id": "cartography_result",
    "$focus_left_binding_type": "none",
    "$focus_left": "cartography_additional"
  },

  "cartography_table_output_slot_button@container_mcjava.no_coalesce_container_slot_button": {
    "button_mappings": [
      {
        "from_button_id": "button.menu_select",
        "to_button_id": "button.cartography_result_take_all_place_all",
        "mapping_type": "pressed"
      },
      {
        "from_button_id": "button.menu_ok",
        "to_button_id": "button.cartography_result_take_all_place_all",
        "mapping_type": "pressed"
      },
      {
        "from_button_id": "button.menu_secondary_select",
        "to_button_id": "button.cartography_result_take_all_place_all",
        "mapping_type": "pressed"
      },
      {
        "from_button_id": "button.controller_select",
        "to_button_id": "button.cartography_result_take_all_place_all",
        "mapping_type": "pressed"
      },
      {
        "from_button_id": "button.menu_auto_place",
        "to_button_id": "button.container_auto_place",
        "mapping_type": "pressed"
      },
      {
        "from_button_id": "button.controller_secondary_select",
        "to_button_id": "button.container_auto_place",
        "mapping_type": "pressed"
      },
      {
        "from_button_id": "button.menu_inventory_drop",
        "to_button_id": "button.drop_one",
        "mapping_type": "pressed"
      },
      {
        "from_button_id": "button.menu_inventory_drop_all",
        "to_button_id": "button.drop_all",
        "mapping_type": "pressed"
      },
      {
        "to_button_id": "button.container_slot_hovered",
        "mapping_type": "pressed"
      }
    ]
  },

  "text_edit_control@text_input_mcjava.text_input": {
    "anchor_from": "top_left",
    "anchor_to": "top_left",
    "offset": [ 65, 39 ],
    "size": [ 50, 16 ],
    "max_length": 30,
    "text_box_name": "#text_box_name",
    "$placeholder_text": "#text_box_placeholder_name",
    "$text_input_placeholder_content_binding_name": "#text_box_placeholder_name",
    "$text_input_label_size": [ "default", 10 ],
    "bindings": [
      {
        "binding_type": "view",
        "source_control_name": "textbox_view",
        "source_property_name": "#toggle_state",
        "target_property_name": "#visible"
      }
    ]
  },

  "textbox_button": {
    "type": "panel",
    "size": [17, 17],
    "anchor_from": "top_left",
    "anchor_to": "top_left",
    "offset": [14, 33],
    "controls": [
      { "show@cartography_table_mcjava.show_textbox_button": {} },
      { "hide@cartography_table_mcjava.hide_textbox_button": {} }
    ],
    "bindings": [
      {
        "binding_name": "#is_rename_mode",
        "binding_name_override": "#visible"
      }
    ]
  },

  "show_textbox_button@toggle_mcjava.toggle_button": {
    "$toggle_button_name": "cartography",
    "size": [17, 17],
    "$toggle_index": 100,
    "anchor_from": "top_left",
    "anchor_to": "top_left",
    "$focus_id": "show_textbox_button",
    "$button_type": "cartography_table_mcjava.show_textbox",
    "$toggle_control_name": "textbox_view",
    "bindings": [
      {
        "binding_type": "view",
        "source_control_name": "textbox_view",
        "source_property_name": "(not #toggle_state)",
        "target_property_name": "#visible"
      }
    ]
  },

  "hide_textbox_button@toggle_mcjava.toggle_button": {
    "$toggle_button_name": "cartography",
    "size": [17, 17],
    "$toggle_index": 50,
    "anchor_from": "top_left",
    "anchor_to": "top_left",
    "$focus_id": "show_textbox_button",
    "$button_type": "cartography_table_mcjava.show_textbox",
    "$toggle_control_name": "no_textbox_view",
    "bindings": [
      {
        "binding_type": "view",
        "source_control_name": "textbox_view",
        "source_property_name": "#toggle_state",
        "target_property_name": "#visible"
      }
    ]
  },

  "show_textbox": {
    "type": "panel",
    "size": [17, 17],
    "controls": [
      {
        "img": {
          "type": "image",
          "texture": "src/assets/img/border",
          "size": ["100%", "100%"],
          "nineslice_size": 1,
          "visible": "($checked_hover_state or $unchecked_hover_state)"
        }
      }
    ]
  }
}