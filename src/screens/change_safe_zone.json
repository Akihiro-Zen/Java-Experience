{
  "namespace": "change_safe_zone_mcjava",
  
  "change_safe_zone_screen_content_panel": {
    "type": "panel",
    "controls": [
      { "title@common_mcjava.title": { "text": "Change Safe Zone" } },
      { "content_panel@change_safe_zone_mcjava.content_panel": {} }
    ]
  },

  "content_panel": {
    "type": "stack_panel",
    "anchor_from": "center",
    "anchor_to": "top_middle",
    "size": [ 310, 195],
    "offset": [ 0, "-36% + 4px" ],
    "$slider_text_bindings": [
      {
        "binding_name": "$slider_text"
      },
      {
        "binding_name": "$slider_tts_text_value"
      }
    ],
    "controls": [
      {
        "stack_zero@common_mcjava.stack": {
          "controls": [
            { "safe_zone_slider_all@change_safe_zone_mcjava.safe_zone_slider_all": {} }
          ]
        }
      },
      { "space_last@common_mcjava.vspace": {} },
      {
        "stack_one@common_mcjava.stack": {
          "controls": [
            { "safe_zone_x@change_safe_zone_mcjava.safe_zone_slider_x": {} },
            { "fill@common_mcjava.hfill": {} },
            { "safe_zone_y@change_safe_zone_mcjava.safe_zone_slider_y": {} }
          ]
        }
      },
      { "space_last@common_mcjava.vspace": {} },
      {
        "stack_two@common_mcjava.stack": {
          "controls": [
            { "screen_position_slider_x@change_safe_zone_mcjava.screen_position_slider_x": {} },
            { "fill@common_mcjava.hfill": {} },
            { "screen_position_slider_y@change_safe_zone_mcjava.screen_position_slider_y": {} }
          ]
        }
      },
      { "space_last@common_mcjava.vspace": { "size": [0, 34] } },
      {
        "panel_zero@common_mcjava.panel": {
          "controls": [
            { "confirm@change_safe_zone_mcjava.confirm_button": {} }
          ]
        }
      },
      { "space_last@common_mcjava.vspace": {} },
      {
        "panel_one@common_mcjava.panel": {
          "controls": [
            { "exit@common_mcjava.exit_button": { "$button_text": "gui.cancel" } }
          ]
        }
      }
    ]
  },

  "safe_zone_slider_all@slider_mcjava.slider": {
    "$slider_text": "#safe_zone_all_slider_label",
    "$slider_name": "safe_zone_all",
    "$slider_value_binding_name": "#safe_zone_all",
    "$text_enabled_binding_name": "#safe_zone_all_enabled",
    "$default_focus_precedence": 1,
    "$slider_select_on_hover": true,
    "size": [310, 20],
    "$slider_tts_text_value": "#safe_zone_all_text_value"
  },

  "safe_zone_slider_x@slider_mcjava.slider": {
/*  "ignored": "$is_publish", */
    "$slider_text": "#safe_zone_x_slider_label",
    "$slider_name": "safe_zone_x",
    "$slider_value_binding_name": "#safe_zone_x",
    "$text_enabled_binding_name": "#safe_zone_x_enabled",
    "$slider_select_on_hover": true,
    "$slider_tts_text_value": "#safe_zone_x_text_value"
  },

  "safe_zone_slider_y@slider_mcjava.slider": {
/*  "ignored": "$is_publish", */
    "$slider_text": "#safe_zone_y_slider_label",
    "$slider_name": "safe_zone_y",
    "$slider_value_binding_name": "#safe_zone_y",
    "$text_enabled_binding_name": "#safe_zone_y_enabled",
    "$slider_select_on_hover": true,
    "$slider_tts_text_value": "#safe_zone_y_text_value"
  },

  "screen_position_slider_x@slider_mcjava.slider": {
/*  "ignored": "$is_publish", */
    "$slider_text": "#screen_position_x_slider_label",
    "$slider_name": "screen_position_x",
    "$slider_value_binding_name": "#screen_position_x",
    "$text_enabled_binding_name": "#screen_position_x_enabled",
    "$slider_select_on_hover": true,
    "$slider_tts_text_value": "#screen_position_x_text_value"
  },

  "screen_position_slider_y@slider_mcjava.slider": {
/*  "ignored": "$is_publish", */
    "$slider_text": "#screen_position_y_slider_label",
    "$slider_name": "screen_position_y",
    "$slider_value_binding_name": "#screen_position_y",
    "$text_enabled_binding_name": "#screen_position_y_enabled",
    "$slider_select_on_hover": true,
    "$slider_tts_text_value": "#screen_position_y_text_value"
  },

  "confirm_button@button_mcjava.button": {
    "$pressed_button_name": "button.confirm_button",
    "$button_text": "gui.confirm"
  }
}