{
  "namespace": "settings_realms_mcjava",

  "realms_screen_content_panel": {
    "type": "panel",
    "controls": [
      { "content_panel@settings_realms_mcjava.realms_content_panel": {} },
      { "profile@configure_realm_mcjava.players": {} },
      { "profile@configure_realm_mcjava.settings": {} },
      { "profile@configure_realm_mcjava.subscriptions": {} },
      { "profile@configure_realm_mcjava.world_backups": {} },
      { "profile@configure_realm_mcjava.world_options": {} }
    ],
    "bindings": [
      {
        "binding_type": "view",
        "source_button_name": "realms_view",
        "source_property_name": "#toggle_state",
        "target_property_name": "#visible"
      }
    ]
  },

  "realms_content_panel": {
    "type": "panel",
    "controls": [
      {
        "title@common_mcjava.title": {
          "text": "options.sounds.title"
        }
      },
      {
        "content_panel@configure_realm_mcjava.realm_content": {}
      }
    ],
    "bindings": [
      {
        "binding_type": "view",
        "source_control_name": "players_view",
        "source_property_name": "(not #toggle_state)",
        "target_property_name": "#visible"
      },
      {
        "binding_type": "view",
        "source_control_name": "settings_view",
        "source_property_name": "(not #toggle_state)",
        "target_property_name": "#visible"
      },
      {
        "binding_type": "view",
        "source_control_name": "subscriptions_view",
        "source_property_name": "(not #toggle_state)",
        "target_property_name": "#visible"
      },
      {
        "binding_type": "view",
        "source_control_name": "backups_view",
        "source_property_name": "(not #toggle_state)",
        "target_property_name": "#visible"
      },
      {
        "binding_type": "view",
        "source_control_name": "options_view",
        "source_property_name": "(not #toggle_state)",
        "target_property_name": "#visible"
      }
    ]
  },
  "content_panel": {
    "type": "stack_panel",
    "anchor_from": "center",
    "anchor_to": "top_middle",
    "size": [
      310,
      195
    ],
    "offset": [
      0,
      "-36% + 4px"
    ],
    "controls": [
      {
        "stack_zero@common_mcjava.stack": {
          "controls": [
            { "music@sound_mcjava.music_slider": {} },
            { "fill@common_mcjava.hfill": {} },
            { "sound@sound_mcjava.sound_slider": {} }
          ]
        }
      },
      {
        "panel_one@common_mcjava.panel": {
          "controls": [
            {
              "back@settings_mcjava.back_button": {}
            }
          ]
        }
      }
    ]
  }
}