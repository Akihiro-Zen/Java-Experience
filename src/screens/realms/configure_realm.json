{
  "namespace": "configure_realm_mcjava",

  "configure_realm_screen_content_panel": {
    "type": "panel",
    "controls": [
      { "settings@configure_realm_mcjava.configure_realm_content_panel": {} },
      { "profile@configure_realm_mcjava.players": {} },
      { "profile@configure_realm_mcjava.settings": {} },
      { "profile@configure_realm_mcjava.subscriptions": {} },
      { "profile@configure_realm_mcjava.world_backups": {} },
      { "profile@configure_realm_mcjava.world_options": {} }
    ],
    "$bindings": [
      {
        "binding_type": "view",
        "source_control_name": "players_view",
        "source_property_name": "(not #toggle_state)",
        "target_property_name": "#visible"
      },
      {
        "binding_type": "view",
        "source_control_name": "settings_view",
        "source_property_name": "(not #toggle_state)",
        "target_property_name": "#visible"
      },
      {
        "binding_type": "view",
        "source_control_name": "subscriptions_view",
        "source_property_name": "(not #toggle_state)",
        "target_property_name": "#visible"
      },
      {
        "binding_type": "view",
        "source_control_name": "backups_view",
        "source_property_name": "(not #toggle_state)",
        "target_property_name": "#visible"
      },
      {
        "binding_type": "view",
        "source_control_name": "options_view",
        "source_property_name": "(not #toggle_state)",
        "target_property_name": "#visible"
      }
    ]
  },

  "configure_realm_content_panel": {
    "type": "panel",
    "controls": [
      {
        "top": {
          "type": "panel",
          "size": [150, 32],
          "anchor_from": "top_middle",
          "anchor_to": "top_middle",
          "offset": [0, -1],
          "controls": [
            {
              "title@common_mcjava.title": {
                "text": "Configure Realm:"
              }
            },
            {
              "name@common_mcjava.title": {
                "text": "#dialog_title",
                "offset": [0, 24],
                "color": "$a_color_format",
                "bindings": [
                  {
                    "binding_name": "#dialog_title"
                  },
                  {
                    "binding_name": "(not #is_realm_expired)",
                    "binding_name_override": "#visible"
                  }
                ]
              }
            },
            {
              "name@common_mcjava.title": {
                "text": "#dialog_title",
                "offset": [0, 24],
                "color": [ 0.667, 0.0, 0.0 ],
                "bindings": [
                  {
                    "binding_name": "#dialog_title"
                  },
                  {
                    "binding_name": "#is_realm_expired",
                    "binding_name_override": "#visible"
                  }
                ]
              }
            },
            { "content_panel@configure_realm_mcjava.realms_world_game_status_icon": {} }
          ]
        }
      },
      { "content_panel@configure_realm_mcjava.realm_content": {} }
    ],
    "bindings": "$bindings",
    "$bindings|default": []
  },

  "realm_content": {
    "type": "stack_panel",
    "anchor_from": "center",
    "anchor_to": "top_middle",
    "size": [365, 195],
    "offset": [ 0, "-36% + 4px" ],
    "controls": [
      {
        "0": {
          "type": "stack_panel",
          "orientation": "horizontal",
          "size": [365, 20],
          "controls": [
            { "space0@common_mcjava.hfill": {} },
            { "players_button@players_button": {} },
            { "space0@common_mcjava.hfill": { "size": [4, 0]} },
            { "settings_button@settings_button": {} },
            { "space0@common_mcjava.hfill": { "size": [4, 0]} },
            { "subscription_button@subscription_button": {} },
            { "space0@common_mcjava.hfill": {} }
          ]
        }
      },
      { "space0@common_mcjava.vfill": { "size": [0, 24]} },
      {
        "0": {
          "type": "stack_panel",
          "orientation": "horizontal",
          "size": [365, 20],
          "controls": [
            { "subscription_button@options_button": {} },
            { "space0@common_mcjava.hfill": { "size": [8, 0]} },
            { "subscription_button@backups_button": {} },
            { "space0@common_mcjava.hfill": { "size": [8, 0]} },
            { "subscription_button@reset_button": {} },
            { "space0@common_mcjava.hfill": { "size": [20, 0]} },
            { "settings_button@common_mcjava.exit_button": { "ignored": "$realms_settings", "size": [75, 20], "$button_text": "Back" } },
            { "back@settings_mcjava.back_button": { "size": [75, 20], "$$toggle_button_text": "Back", "ignored": "(not $realms_settings)" } },
            { "space0@common_mcjava.hfill": {} }
          ]
        }
      },
      { "space0@common_mcjava.vfill": {} }
    ]
  },

  "reset_button@button_mcjava.action_button": {
    "size": [88, 20],
    "$button_text": "realmsSettingsScreen.resetWorldButton",
    "$pressed_button_name": "menu_reset_world",
    "bindings": [
      {
        "binding_name": "#reset_button_enabled",
        "binding_name_override": "#enabled"
      },
      {
        "binding_name": "#reset_button_visible",
        "binding_name_override": "#visible"
      }
    ]
  },

  "realms_world_game_status_icon": {
    "type": "panel",
    "size": [ 10, 32 ],
    "anchor_from": "top_right",
    "anchor_to": "top_right",
    "offset": [0, 6],
    "layer": 30,
    "controls": [
      {
        "game_online_icon@realms_mcjava.game_online_icon": {
          "bindings": [
            {
              "binding_name": "(not #is_realm_expired)",
              "binding_name_override": "#visible"
            }
          ]
        }
      },
      {
        "game_unavailable_icon@realms_mcjava.game_offline_icon": {
          "bindings": [
            {
              "binding_name": "#is_realm_expired",
              "binding_name_override": "#visible"
            }
          ]
        }
      }
    ]
  },

  "players_button@toggle_mcjava.toggle_button": {
    "size": [100, 20],
    "$toggle_index": 50,
    "$disabled": true,
    "$toggle_button_text": "Players",
    "$toggle_button_name": "players",
    "$toggle_control_name": "players_view"
  },

  "settings_button@toggle_mcjava.toggle_button": {
    "size": [100, 20],
    "$toggle_index": 51,
    "$toggle_button_text": "Settings",
    "$toggle_button_name": "settings",
    "$toggle_control_name": "settings_view"
  },

  "subscription_button@toggle_mcjava.toggle_button": {
    "size": [100, 20],
    "$toggle_index": 52,
    "$toggle_button_text": "Subscriptions",
    "$toggle_button_name": "subscriptions",
    "$toggle_control_name": "subscriptions_view"
  },
  
  "options_button@toggle_mcjava.toggle_button": {
    "size": [88, 20],
    "$toggle_index": 53,
    "$toggle_button_text": "World options",
    "$toggle_button_name": "options",
    "$toggle_control_name": "options_view"
  },

  "backups_button@toggle_mcjava.toggle_button": {
    "size": [88, 20],
    "$toggle_index": 54,
    "$toggle_button_text": "World backups",
    "$toggle_button_name": "backups",
    "$toggle_control_name": "backups_view"
  },

  "players@realm_players_mcjava.players_content_panel": {
    "bindings": [
      {
        "binding_type": "view",
        "source_control_name": "players_view",
        "source_property_name": "#toggle_state",
        "target_property_name": "#visible"
      }
    ]
  },

  "settings@realm_settings_mcjava.settings_content_panel": {
    "bindings": [
      {
        "binding_type": "view",
        "source_control_name": "settings_view",
        "source_property_name": "#toggle_state",
        "target_property_name": "#visible"
      }
    ]
  },

  "subscriptions@realm_subscriptions_mcjava.subscriptions_content_panel": {
    "bindings": [
      {
        "binding_type": "view",
        "source_control_name": "subscriptions_view",
        "source_property_name": "#toggle_state",
        "target_property_name": "#visible"
      }
    ]
  },

  "world_options@realm_world_options_mcjava.world_options_content_panel": {
    "bindings": [
      {
        "binding_type": "view",
        "source_control_name": "options_view",
        "source_property_name": "#toggle_state",
        "target_property_name": "#visible"
      }
    ]
  },

  "world_backups@realm_world_backups_mcjava.world_backups_content_panel": {
    "bindings": [
      {
        "binding_type": "view",
        "source_control_name": "backups_view",
        "source_property_name": "#toggle_state",
        "target_property_name": "#visible"
      }
    ]
  },

  "back_button@toggle_mcjava.toggle_button": {
    "$cancel_mapping": true,
    "size": [200, 20],
    "$toggle_button_text": "gui.done"
  }
}