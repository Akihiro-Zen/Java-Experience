{
  "namespace": "realm_players_mcjava",
  
  "players_content_panel": {
    "type": "panel",
    "controls": [
      { "title@common_mcjava.title": { "text": "options.playerss.title" } },
      { "content_panel@realm_players_mcjava.players_content": {} },
      { "@list_invite_button": {} },
      { "@list_uninvited_button": {} }
    ],
    "bindings": [
      {
        "binding_type": "view",
        "source_button_name": "players_view",
        "source_property_name": "#toggle_state",
        "target_property_name": "#visible"
      }
    ]
  },

  "players_content": {
    "type": "stack_panel",
    "anchor_from": "top_middle",
    "anchor_to": "top_middle",
    "orientation": "horizontal",
    "size": ["100%c", 175],
    "offset": [0, 40],
    "controls": [
      { "@left_panel": {} },
      { "@right_panel": {} }
    ]
  },

  "list_invite_button@toggle_mcjava.toggle_button": {
    "offset": [0, 22],
    "size": [50, 20],
    "anchor_from": "bottom_middle",
    "anchor_to": "bottom_middle",
    "$toggle_index": 0,
    "$toggle_button_text": "Invite",
    "$toggle_button_name": "lists_man",
    "$toggle_control_name": "list_invite_view"
  },

  "list_uninvited_button@toggle_mcjava.toggle_button": {
    "offset": [0, 22],
    "size": [50, 20],
    "anchor_from": "bottom_right",
    "anchor_to": "bottom_right",
    "$toggle_index": 1,
    "$toggle_button_text": "Blocked",
    "$toggle_button_name": "lists_man",
    "$toggle_control_name": "list_uninvited_view"
  },

  "left_panel": {
    "type": "panel",
    "size": [ 150, "100%"],
    "controls": [
      { "title@common_mcjava.title": { "anchor_to": "top_left", "anchor_from": "top_left", "text": "mco.configure.world.backup", "offset": [0, -12], "color": [0.62, 0.62, 0.62] } },
      { "@player_filter_text_box": {} },
      {
        "0": {
          "type": "panel",
          "size": ["100%", "100% - 16px"],
          "offset": [0, 18],
          "anchor_from": "top_left",
          "anchor_to": "top_left",
          "controls": [
            {
              "selection_content_panel@resource_packs_mcjava.side_content_panel": {
                "size": ["100%", "100%"],
                "$scroll_bar_offset":["50% - 4px", 0],
                "$scrolling_content": "realm_players_mcjava.scroll_cont"
              }
            }
          ]
        }
      }
    ]
  },

  "player_filter_text_box@text_input_mcjava.text_input": {
    "anchor_from": "top_left",
    "anchor_to": "top_left",
    "size": [ "100%", 16],
    "offset": [0, 2],
    "$text_box_name": "#player_filter_text_box",
    "max_length": 30,
    "$placeholder_text": "realmsSettingsScreen.searchBox"
  },

  "scroll_cont": {
    "type": "stack_panel",
    "controls": [
      {
        "uninvited_stack@realms_whitelist.factory_stack": {
          "collection_name": "uninvited_friends_collection",
          "factory": {
            "name": "factory",
            "control_ids": {
              "small_button": "@realms_whitelist.uninvited_factory_xbl_profile",
              "large_button": "@realms_whitelist.uninvited_factory_linked_account"
            }
          },
          "bindings": [
            {
              "binding_name": "#uninvited_section_content",
              "binding_name_override": "#collection_length"
            },
            {
              "binding_type": "view",
              "source_button_name": "list_uninvited_view",
              "source_property_name": "#toggle_state",
              "target_property_name": "#visible"
            }
          ]
        }
      },
      {
        "invited_stack@realms_whitelist.factory_stack": {
          "collection_name": "invited_friends_collection",
          "factory": {
            "name": "factory",
            "control_ids": {
              "small_button": "@realms_whitelist.invited_factory_xbl_profile",
              "large_button": "@realms_whitelist.invited_factory_linked_account"
            }
          },
          "bindings": [
            {
              "binding_name": "#invited_section_content",
              "binding_name_override": "#collection_length"
            },
            {
              "binding_type": "view",
              "source_button_name": "list_invite_view",
              "source_property_name": "#toggle_state",
              "target_property_name": "#visible"
            }
          ]
        }
      }
    ]
  },
  
  "right_panel": {
    "type": "stack_panel",
    "size": [200, "100%"],
    "controls": [
      {
        "stack_zero@common_mcjava.stack": {
          "controls": [
            { "fill@common_mcjava.hfill": {} },
            { "fill@realm_players_mcjava.permission_level_panel": {} }
          ]
        }
      },
      { "@common_mcjava.vfill": {} },
      {
        "stack_zero@common_mcjava.stack": {
          "controls": [
            { "fill@common_mcjava.hfill": {} },
            { "back@configure_realm_mcjava.back_button": { "$toggle_button_name": "players", "$toggle_button_text": "gui.back", "size": [75, 20] } },
            { "fill@common_mcjava.hfill": { "size": [14, 0]} }
          ]
        }
      }
    ]
  },

  "permission_level_panel@button_mcjava.radio_group_panel": {
    "size": [152, 20],
    "$toggle_enabled_binding_name": "#realm_default_permission_dropdown_enabled",
    "controls": [
      {
        "peaceful@button_mcjava.radio_group_button": {
          "size": ["100%- 2px", 20],
          "$radio_action_text": "permissions.level.visitor",
          "$this_action": "#permission_level_radio_visitor",
          "$next_action": "#permission_level_radio_member"
        }
      },
      {
        "easy@button_mcjava.radio_group_button": {
          "size": ["100%- 2px", 20],
          "$radio_action_text": "permissions.level.member",
          "$this_action": "#permission_level_radio_member",
          "$next_action": "#permission_level_radio_operator"
        }
      },
      {
        "normal@button_mcjava.radio_group_button": {
          "size": ["100%- 2px", 20],
          "$radio_action_text": "permissions.level.operator",
          "$this_action": "#permission_level_radio_operator",
          "$next_action": "#permission_level_radio_custom"
        }
      },
      {
        "hard@button_mcjava.radio_group_button": {
          "size": ["100%- 2px", 20],
          "$radio_action_text": "permissions.level.custom",
          "$this_action": "#permission_level_radio_custom",
          "$next_action": "#permission_level_radio_visitor"
        }
      }
    ]
  }
}

