      }
    ]
  },

  "touch@touch_mcjava.touch_content_panel": {
    "bindings": [
      {
        "binding_type": "view",
        "source_control_name": "touch_view",
        "source_property_name": "#toggle_state",
        "target_property_name": "#visible"
      }
    ]
  },

  "storage@storage_mcjava.storage_content_panel": {
    "bindings": [
      {
        "binding_type": "view",
