{
  "namespace": "accessibility_mcjava",

  "accessibility_content_panel": {
    "type": "panel",
    "controls": [
      { "title@common_mcjava.title": { "text": "options.accessibility.title" } },
      { "content_panel@accessibility_mcjava.content_panel": {} },
      { "popup_dialog_factory@accessibility_mcjava.popup_dialog_factory": {} }
    ]
  },
   
  "content_panel": {
    "type": "stack_panel",
    "anchor_from": "center",
    "anchor_to": "top_middle",
    "size": [ 310, 195],
    "offset": [ 0, "-36%" ],
    "controls": [
      {
        "stack_zero@common_mcjava.stack": {
          "controls": [
            { "text_to_speech@accessibility_mcjava.text_to_speech_toggle": {} },
            { "fill@common_mcjava.hfill": {} },
            { "ui_text_to_speech@accessibility_mcjava.ui_text_to_speech_toggle": {} }
          ]
        }
      },
      { "space_zero@common_mcjava.vspace": {} },
      {
        "stack_one@common_mcjava.stack": {
          "controls": [
            { "chat_text_to_speech@accessibility_mcjava.chat_text_to_speech_toggle": {} },
            { "fill@common_mcjava.hfill": {} },
            { "open_chat_message@accessibility_mcjava.open_chat_message_toggle": {} }
          ]
        }
      },
      { "space_one@common_mcjava.vspace": {} },
      {
        "stack_two@common_mcjava.stack": {
          "controls": [
            { "how_to_play@accessibility_mcjava.how_to_play_button": {} },
            { "fill@common_mcjava.hfill": {} },
            { "reset_button@accessibility_mcjava.reset_button": {} }

          ]
        }
      },
      { "space_two@common_mcjava.vspace": { "size": [0, 16] } },
      {
        "stack_three@common_mcjava.panel": {
          "controls": [
            { "back@settings_mcjava.back_button": { "$toggle_button_name": "navigation_tab" } }
          ]
        }
      }
    ]
  },

  /* Content */

  "popup_dialog_factory": {
    "type": "factory",
    "control_ids": {
      "modal_dialog_popup": "@popup_mcjava.reset_accessibility_settings_modal"
    }
  },

  "text_to_speech_toggle@toggle_mcjava.toggle": {
    /* "ignored": "(not $text_to_speech_supported or not $platform_tts_exists)", */
    "$toggle_text": "options.enableAutoPlatformTextToSpeech",
    "$toggle_binding_name": "#enable_auto_text_to_speech",
    "$toggle_enabled_binding_name": "#enable_auto_text_to_speech_enabled",
    "$toggle_name": "enable_auto_text_to_speech"
  },

  "ui_text_to_speech_toggle@toggle_mcjava.toggle": {
    /* "ignored": "(not $text_to_speech_supported)", */
    "$toggle_text": "options.enableUITextToSpeech",
    "$toggle_binding_name": "#enable_ui_text_to_speech",
    "$toggle_enabled_binding_name": "#enable_ui_text_to_speech_enabled",
    "$toggle_name": "enable_ui_text_to_speech"
  },

  "chat_text_to_speech_toggle@toggle_mcjava.toggle": {
    /* "ignored": "(not $text_to_speech_supported)", */
    "$toggle_text": "options.enableChatTextToSpeech",
    "$toggle_binding_name": "#enable_chat_text_to_speech",
    "$toggle_enabled_binding_name": "#enable_chat_text_to_speech_enabled",
    "$toggle_name": "enable_chat_text_to_speech"
  },

  "open_chat_message_toggle@toggle_mcjava.toggle": {
    /* "ignored": "(not $text_to_speech_supported)", */
    "$toggle_text": "options.enableOpenChatMessage",
    "$toggle_binding_name": "#enable_open_chat_message",
    "$toggle_enabled_binding_name": "#enable_open_chat_message_enabled",
    "$toggle_name": "enable_open_chat_message"
  },

  "how_to_play_button@toggle_mcjava.toggle_button": {
    "$toggle_index": "$how_to_play_index",
    "$button_text": "How To Play",
    "$toggle_button_name": "navigation_tab",
    "$toggle_control_name": "how_to_play_button_toggle"
  },
  
  "reset_button@button_mcjava.action_button": {
    "ignored": "(not $is_pregame)",
    "$pressed_button_name": "button.reset_settings",
    "size": [150, 20],
    "$button_text": "options.resetSettings",
    "$focus_override_down": "FOCUS_OVERRIDE_STOP",
    "property_bag": {
      "reset_group": "accessibility"
    }
  }
}