{
  "namespace": "user_profile_mcjava",
  
  "user_profile_screen_content_panel": {
    "type": "panel",
    "controls": [
      { "title@common_mcjava.title": { "text": "options.userProfile.title" } },
      { "content_panel@user_profile_mcjava.content_panel": {} }
    ]
  },

  "content_panel": {
    "type": "stack_panel",
    "anchor_from": "center",
    "anchor_to": "top_middle",
    "size": [ 310, 195],
    "offset": [ 0, "-36%" ],
    "controls": [
      { "name_controls@user_profile_mcjava.name_controls": {} },
      { "signin_controls@user_profile_mcjava.signin_controls": {} },
      { "gamertag_controls@user_profile_mcjava.gamertag_controls": {} },
      { "space_zero@common_mcjava.vspace": {} },
      {
        "panel_zero@common_mcjava.stack": {
          "ignored": "($is_console or $is_settopbox or $win10_edition or $osx_edition or $education_edition)",
          "controls": [
            { "auto_update_mode@user_profile_mcjava.auto_update_mode_multioption": {} },
            { "fill@common_mcjava.hfill": {} },
            { "allow_cellular_data_toggle@user_profile_mcjava.allow_cellular_data_toggle": {} }
          ]
        }
      },
      {
        "panel_one@common_mcjava.stack": {
          "ignored": "(not $is_console and not $is_settopbox and not $win10_edition and not $osx_edition)",
          "controls": [
            { "auto_update_mode@user_profile_mcjava.auto_update_mode_multioption": {} },
            { "fill@common_mcjava.hfill": {} },
            { "auto_update_enabled_toggle@user_profile_mcjava.auto_update_enabled_toggle": { "$disabled": "$nx_os" } }
          ]
        }
      },
      { "space_zero@common_mcjava.vspace": {} },
      {
        "panel_one@common_mcjava.stack": {
          "controls": [
            { "option_content_gui_log@user_profile_mcjava.option_content_gui_log": {} },
            { "fill@common_mcjava.hfill": {} },
            { "option_content_file_log@user_profile_mcjava.option_content_file_log": {} }
          ]
        }
      },
      { "space_zero@common_mcjava.vspace": {} },
      {
        "panel_one@common_mcjava.stack": {
          "controls": [
            { "open_content_log_history@user_profile_mcjava.open_content_log_history": {} },
            { "fill@common_mcjava.hfill": {} },
            { "allow_cellular_data_toggle@user_profile_mcjava.allow_cellular_data_toggle": {} }
          ]
        }
      },
      { "space_zero@common_mcjava.vspace": {} },
      {
        "panel_one@common_mcjava.stack": {
          "ignored": "($is_holographic or $win10_edition)",
          "controls": [
            { "file_storage_multioption@user_profile_mcjava.file_storage_multioption": { "$enabled": "$storage_location_switch_enabled" } },
            { "fill@common_mcjava.hfill": {} },
            { "allow_cellular_data_toggle@user_profile_mcjava.allow_cellular_data_toggle": {} }
          ]
        }
      },
      { "space_zero@common_mcjava.vspace": {} },
      {
        "panel_one@common_mcjava.stack": {
          "ignored": "$is_holographic",
          "controls": [
            { "file_storage_multioption@user_profile_mcjava.file_storage_multioptin": {} },
            { "fill@common_mcjava.hfill": {} },
            { "terms_and_conditions_link_button@user_profile_mcjava.terms_and_conditions_link_button": {} },
            { "terms_and_conditions_content_popup_button@user_profile_mcjava.terms_and_conditions_content_popup_button": {} }
          ]
        }
      },
      { "space_zero@common_mcjava.vspace": {} },
      {
        "panel_one@common_mcjava.stack": {
          "controls": [
            { "credits_button@user_profile_mcjava.credits_button": {} },
            { "fill@common_mcjava.hfill": {} },
            { "attribution_link_button@user_profile_mcjava.attribution_link_button": {} },
            { "attribution_popup_button@user_profile_mcjava.attribution_popup_button": {} }
          ]
        }
      },
      { "space_zero@common_mcjava.vspace": { "size": [0, 16.5] } },
      {
        "panel_one@common_mcjava.panel": {
          "controls": [
            { "credits_button@settings_mcjava.back_button": {} }
          ]
        }
      }
    ]
  },

  "terms_and_conditions_link_button@button_mcjava.link_button": {
    "size": [150, 20],
    "ignored": "$fire_tv",
    "enabled": "$thirdpartyconsole",
    "$button_text": "options.termsAndConditions",
    "bindings": [
      {
        "binding_name": "#terms_and_conditions_hyperlink",
        "binding_name_override": "#hyperlink",
        "binding_type": "global"
      }
    ]
  },

  "terms_and_conditions_content_popup_button@button_mcjava.action_button": {
    "size": [150, 20],
    "ignored": "(not $fire_tv)",
    "enabled": "$thirdpartyconsole",
    "$pressed_button_name": "button.terms_and_conditions_popup",
    "$button_text": "options.termsAndConditions"
  },

  "allow_cellular_data_toggle@toggle_mcjava.toggle": {
    "$disabled": "$education_edition_china",
    "$toggle_text": "options.allowCellularData",
    "$toggle_binding_name": "#allow_cellular_data",
    "$toggle_enabled_binding_name": "#allow_cellular_data_enabled",
    "$toggle_name": "allow_cellular_data"
  },

  "credits_button@button_mcjava.action_button": {
    "size": [150, 20],
    "$pressed_button_name": "button.credits",
    "$button_text": "options.credits"
  },

  "attribution_link_button@button_mcjava.link_button": {
    "size": [150, 20],
    "ignored": "($is_holographic or $fire_tv)",
    "enabled": "(not $education_edition_china)",
    "$button_text": "options.attribution",
    "variables": [
      {
        "requires": "(not $nx_os)",
        "$attribution_button_url": "https://www.minecraft.net/attribution/?hideChrome"
      },
      {
        "requires": "($nx_os)",
        "$attribution_button_url": "https://aka.ms/switchattribution"
      }
    ],
    "property_bag": {
      "#hyperlink": "$attribution_button_url"
    }
  },

  "attribution_popup_button@button_mcjava.action_button": {
    "size": [150, 20],
    "ignored": "(not $is_holographic and not $fire_tv)",
    "$pressed_button_name": "button.attribution_popup",
    "$button_text": "options.attribution"
  },

