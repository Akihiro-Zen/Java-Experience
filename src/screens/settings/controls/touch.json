{
  "namespace": "touch_mcjava",

  "touch_content_panel@common_mcjava.scroll_screen": {
    "$top_content": "touch_mcjava.top_content",
    "$scrolling_content": "touch_mcjava.scroll_content",
    "$bottom_content": "touch_mcjava.bottom_content",
    "$popup_factory": "touch_mcjava.popup_dialog_factory"
  },

  "top_content": {
    "type": "panel",
    "controls": [
      { "title@common_mcjava.title": { "offset": [0, 7], "text": "options.controls.title" } }
    ]
  },

  "scroll_content": {
    "type": "stack_panel",
    "size": [ 310, "100%c" ],
    "controls": [
      { "space_top@common_mcjava.vspace": {} },
      {
        "stack_zero@common_mcjava.stack": {
          "controls": [
            { "sensitivity@touch_mcjava.sensitivity_slider": {} },
            { "fill@common_mcjava.hfill": {} },
            { "invert_y_axis@touch_mcjava.invert_y_axis_toggle": {} }
          ]
        }
      },
      { "space_zero@common_mcjava.vspace": {} },
      {
        "stack_one@common_mcjava.stack": {
          "controls": [
            { "auto_jump@touch_mcjava.auto_jump_toggle": {} },
            { "fill@common_mcjava.hfill": {} },
            { "destroy_vibration@touch_mcjava.destroy_vibration_toggle": {} }
          ]
        }
      },
      { "space_one@common_mcjava.vspace": {} },
      {
        "stack_two@common_mcjava.stack": {
          "controls": [
            { "split_controls@touch_mcjava.split_controls_toggle": {} },
            { "fill@common_mcjava.hfill": {} },
            { "left_handed@touch_mcjava.left_handed_toggle": {} }
          ]
        }
      },
      { "space_two@common_mcjava.vspace": {} },
      {
        "stack_three@common_mcjava.stack": {
          "controls": [
            { "swap_jump_and_sneak@touch_mcjava.swap_jump_and_sneak_toggle": {} },
            { "fill@common_mcjava.hfill": {} },
            { "hotbar_only_touch@touch_mcjava.hotbar_only_touch_toggle": {} }
          ]
        }
      },
      { "space_three@common_mcjava.vspace": {} },
      {
        "stack_four@common_mcjava.stack": {
          "controls": [
            { "button_size@touch_mcjava.button_size_slider": {} },
            { "fill@common_mcjava.hfill": {} }
          ]
        }
      },
      { "space_bottom@common_mcjava.vspace": {} }
    ]
  },

  "bottom_content": {
    "type": "stack_panel",
    "orientation": "horizontal",
    "anchor_from": "bottom_middle",
    "anchor_to": "bottom_middle",
    "size": [ 310, 20],
    "offset": [ 0, -9 ],
    "controls": [
      { "reset@touch_mcjava.reset_button": {} },
      { "fill@common_mcjava.hfill": {} },
      {
        "back@settings_mcjava.back_button": {
          "$toggle_button_name": "navigation_tab",
          "size": [150, 20]
        }
      }
    ]
  },

  /* Content */

  "popup_dialog_factory": {
    "type": "factory",
    "control_ids": {
      "modal_dialog_popup": "@popup_mcjava.reset_touch_settings_modal"
    }
  },

  "sensitivity_slider@slider_mcjava.slider": {
    "$slider_text": "#touch_sensitivity_slider_label",
    "$slider_name": "touch_sensitivity",
    "$slider_value_binding_name": "#touch_sensitivity",
    "$slider_tts_text_value": "#touch_sensitivity_text_value",
    "$slider_enabled_binding_name": "#touch_sensitivity_enabled",
    "$slider_text_bindings": [
      {
        "binding_name": "$slider_text"
      }
    ]
  },

  "invert_y_axis_toggle@toggle_mcjava.toggle": {
    "$toggle_text": "options.invertYAxis",
    "$toggle_binding_name": "#touch_invert_y_axis",
    "$toggle_enabled_binding_name": "#touch_invert_y_axis_enabled",
    "$toggle_name": "touch_invert_y_axis"
  },

  "auto_jump_toggle@toggle_mcjava.toggle": {
    "$toggle_text": "options.autojump",
    "$toggle_binding_name": "#touch_autojump",
    "$toggle_enabled_binding_name": "#touch_autojump_enabled",
    "$toggle_name": "touch_autojump"
  },

  "destroy_vibration_toggle@toggle_mcjava.toggle": {
    "$toggle_text": "options.destroyvibration",
    "$toggle_binding_name": "#touch_vibration",
    "$toggle_enabled_binding_name": "#touch_vibration_enabled",
    "$toggle_name": "touch_vibration"
  },

  "option_toggle_3@toggle_mcjava.toggle": {
    "ignored": true, // Remove this line when Options::TOGGLE_CROUCH actually affects crouch behavior (User Story 30117)
    "$toggle_text": "options.toggleCrouch",
    "$toggle_binding_name": "#touch_toggle_crouch",
    "$toggle_enabled_binding_name": "#touch_toggle_crouch_enabled",
    "$toggle_name": "touch_toggle_crouch"
  },

  "split_controls_toggle@toggle_mcjava.toggle": {
    "$toggle_text": "options.usetouchpad",
    "$toggle_binding_name": "#split_controls",
    "$toggle_enabled_binding_name": "#split_controls_enabled",
    "$toggle_name": "split_controls"
  },

  "left_handed_toggle@toggle_mcjava.toggle": {
    "$toggle_text": "options.lefthanded",
    "$toggle_binding_name": "#left_handed",
    "$toggle_enabled_binding_name": "#left_handed_enabled",
    "$toggle_name": "left_handed"
  },

  "swap_jump_and_sneak_toggle@toggle_mcjava.toggle": {
    "$toggle_text": "options.swapJumpAndSneak",
    "$toggle_binding_name": "#swap_jump_and_sneak",
    "$toggle_enabled_binding_name": "#swap_jump_and_sneak_enabled",
    "$toggle_name": "swap_jump_and_sneak"
  },

  "hotbar_only_touch_toggle@toggle_mcjava.toggle": {
    "$toggle_text": "options.hotbarOnlyTouch",
    "$toggle_binding_name": "#hotbar_only_touch",
    "$toggle_enabled_binding_name": "#hotbar_only_touch_enabled",
    "$toggle_name": "hotbar_only_touch"
  },

  "button_size_slider@slider_mcjava.slider": {
    "$slider_text": "#button_size_slider_label",
    "$slider_name": "button_size",
    "$slider_value_binding_name": "#button_size",
    "$slider_tts_text_value": "#button_size_text_value",
    "$slider_enabled_binding_name": "#button_size_enabled",
    "$slider_text_bindings": [
      {
        "binding_name": "$slider_text"
      }
    ]
  },

  "reset_button@button_mcjava.action_button": {
    "size": [150, 20],
    "$pressed_button_name": "button.reset_touch_bindings",
    "$button_text": "options.resetSettings",
    "$focus_override_down": "FOCUS_OVERRIDE_STOP"
  }
}