{
  "namespace": "controller_settings_mcjava",

  "controller_settings_content_panel@common_mcjava.scroll_screen": {
    "$top_content": "controller_settings_mcjava.top_content",
    "$scrolling_content": "controller_settings_mcjava.scroll_content",
    "$bottom_content": "controller_settings_mcjava.bottom_content"
  },

  "top_content": {
    "type": "panel",
    "controls": [
      { "title@common_mcjava.title": { "offset": [0, 7], "text": "options.controls.title" } }
    ]
  },

  "scroll_content": {
    "type": "stack_panel",
    "size": [310, "100%c" ],
    "controls": [
      { "space_top@common_mcjava.vspace": {} },
      {
        "stack_zero@common_mcjava.stack": {
          "controls": [
            { "sensitivity@controller_settings_mcjava.sensitivity_slider": {} },
            { "vr@controller_settings_mcjava.vr_sensitivity_slider": {} },
            { "fill@common_mcjava.hfill": {} },
            { "invert_y_axis@controller_settings_mcjava.invert_y_axis_toggle": {} }
          ]
        }
      },
      { "space_zero@common_mcjava.vspace": {} },
      {
        "stack_one@common_mcjava.stack": {
          "controls": [
            { "gamepad_cursor_sensitivity@controller_settings_mcjava.gamepad_cursor_sensitivity_slider": {} },
            { "fill@common_mcjava.hfill": {} },
            { "vibration@controller_settings_mcjava.vibration_toggle": {} }
          ]
        }
      },
      { "space_one@common_mcjava.vspace": {} },
      {
        "stack_two@common_mcjava.stack": {
          "controls": [
            { "gamepad_swap_ab@controller_settings_mcjava.gamepad_swap_ab_toggle": {} },
            { "fill@common_mcjava.hfill": {} },
            { "gamepad_swap_xy@controller_settings_mcjava.gamepad_swap_xy_toggle": {} }
          ]
        }
      },
      { "space_two@common_mcjava.vspace": {} },
      {
        "stack_three@common_mcjava.stack": {
          "controls": [
            { "hide_tooltips@controller_settings_mcjava.hide_tooltips_toggle": {} },
            { "fill@common_mcjava.hfill": {} },
            { "hide_gamepad_cursor@controller_settings_mcjava.hide_gamepad_cursor_toggle": {} }
          ]
        }
      },
      {
        "space_three@common_mcjava.vspace": {
          "bindings": [
            {
              "binding_name": "#vr_roll_turn_sensitivity_visible",
              "binding_name_override": "#visible"
            }
          ]
        } 
      },
      {
        "stack_four@common_mcjava.stack": {
          "bindings": [
            {
              "binding_name": "#vr_roll_turn_sensitivity_visible",
              "binding_name_override": "#visible"
            }
          ],
          "controls": [
            { "vr_roll_turn_sensitivity@controller_settings_mcjava.vr_roll_turn_sensitivity_slider": {} },
            { "fill@common_mcjava.hfill": {} }
          ]
        }
      }
    ]
  },

  "bottom_content": {
    "type": "panel",
    "size": [ 200, 32],
    "controls": [
      { "back@controller_settings_mcjava.controller_button": { "offset": [0, -0.5] } }
    ]
  },

  /* Content */

  "controller_button@toggle_mcjava.toggle_button": {
    "$toggle_button_name": "controller_settings",
    "size": [200, 20],
    "$toggle_index": 0,
    "$toggle_button_text": "gui.done",
    "$cancel_mapping": true,
    "$toggle_control_name": "return"
  },

  "sensitivity_slider@slider_mcjava.slider": {
    "ignored": "($is_holographic and not $is_living_room_mode)",
    "$slider_text": "#controller_sensitivity_slider_label",
    "$slider_name": "controller_sensitivity",
    "$slider_value_binding_name": "#controller_sensitivity",
    "$slider_tts_text_value": "#controller_sensitivity_text_value",
    "$slider_enabled_binding_name": "#controller_sensitivity_enabled",
    "$focus_override_right": "FOCUS_OVERRIDE_STOP",
    "$slider_text_bindings": [
      {
        "binding_name": "$slider_text"
      }
    ]
  },

  "vr_sensitivity_slider@slider_mcjava.slider": {
    "ignored": "($is_living_room_mode or not $is_holographic)",
    "$slider_text": "#vr_sensitivity_slider_label",
    "$slider_name": "vr_sensitivity",
    "$slider_value_binding_name": "#vr_sensitivity",
    "$slider_tts_text_value": "#vr_sensitivity_text_value",
    "$slider_enabled_binding_name": "#vr_sensitivity_enabled",
    "$slider_text_bindings": [
      {
        "binding_name": "$slider_text"
      }
    ]
  },

  "invert_y_axis_toggle@toggle_mcjava.toggle": {
    "$toggle_text": "options.invertYAxis",
    "$toggle_binding_name": "#controller_invert_y_axis",
    "$toggle_enabled_binding_name": "#controller_invert_y_axis_enabled",
    "$toggle_name": "controller_invert_y_axis",
    "$focus_override_right": "FOCUS_OVERRIDE_STOP"
  },

  "gamepad_cursor_sensitivity_slider@slider_mcjava.slider": {
    "$slider_text": "#gamepad_cursor_sensitivity_slider_label",
    "$slider_name": "gamepad_cursor_sensitivity",
    "$slider_value_binding_name": "#gamepad_cursor_sensitivity",
    "$slider_tts_text_value": "#gamepad_cursor_sensitivity_text_value",
    "$slider_enabled_binding_name": "#gamepad_cursor_sensitivity_enabled",
    "$slider_text_bindings": [
      {
        "binding_name": "$slider_text"
      }
    ]
  },

  "vibration_toggle@toggle_mcjava.toggle": {
    "enabled": false, // TODO: Remove this line when we add in haptic feedback (User Story 41617)
    "$toggle_text": "options.destroyvibration",
    "$toggle_binding_name": "#controller_vibration",
    "$toggle_enabled_binding_name": "#controller_vibration_enabled",
    "$toggle_name": "controller_vibration"
  },

  "gamepad_swap_ab_toggle@toggle_mcjava.toggle": {
    "$toggle_text": "#swap_gamepad_ab",
    "$toggle_binding_name": "#swap_gamepad_ab_buttons",
    "$toggle_enabled_binding_name": "#swap_gamepad_ab_buttons_enabled",
    "$toggle_name": "swap_gamepad_ab_buttons"
  },

  "gamepad_swap_xy_toggle@toggle_mcjava.toggle": {
    "$toggle_text": "#swap_gamepad_xy",
    "$toggle_binding_name": "#swap_gamepad_xy_buttons",
    "$toggle_enabled_binding_name": "#swap_gamepad_xy_buttons_enabled",
    "$toggle_name": "swap_gamepad_xy_buttons"
  },

  "hide_tooltips_toggle@toggle_mcjava.toggle": {
    "$toggle_text": "options.hidetooltips",
    "$toggle_binding_name": "#hide_tooltips",
    "$toggle_enabled_binding_name": "#hide_tooltips_enabled",
    "$toggle_name": "hide_tooltips"
  },

  "hide_gamepad_cursor_toggle@toggle_mcjava.toggle": {
    "$toggle_text": "options.hidegamepadcursor",
    "$toggle_binding_name": "#hide_gamepad_cursor",
    "$toggle_enabled_binding_name": "#hide_gamepad_cursor_enabled",
    "$toggle_name": "hide_gamepad_cursor"
  },

  "vr_roll_turn_sensitivity_slider@slider_mcjava.slider": {
    "$slider_text": "#vr_roll_turn_sensitivity_slider_label",
    "$slider_name": "vr_roll_turn_sensitivity",
    "$slider_value_binding_name": "#vr_roll_turn_sensitivity",
    "$slider_tts_text_value": "#vr_roll_turn_sensitivity_text_value",
    "$slider_enabled_binding_name": "#vr_roll_turn_sensitivity_enabled",
    "$slider_text_bindings": [
      {
        "binding_name": "$slider_text"
      }
    ],
    "bindings": [
      {
        "binding_name": "#vr_roll_turn_sensitivity_visible",
        "binding_name_override": "#visible"
      }
    ]
  },

  "toggle_crouch_toggle@toggle_mcjava.toggle": {
    "ignored": true, // Remove this line when Options::TOGGLE_CROUCH actually affects crouch behavior (User Story 30117)
    "$toggle_text": "options.toggleCrouch",
    "$toggle_binding_name": "#controller_toggle_crouch",
    "$toggle_enabled_binding_name": "#controller_toggle_crouch_enabled",
    "$toggle_name": "controller_toggle_crouch"
  }
}