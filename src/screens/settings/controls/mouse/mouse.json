  "bottom_content": {
    "type": "stack_panel",
    "orientation": "horizontal",
    "anchor_from": "bottom_middle",
    "anchor_to": "bottom_middle",
    "size": [ 310, 20],
    "offset": [ 0, -9 ],
    "controls": [
      { "reset@mouse_mcjava.reset_button": {} },
      { "fill@common_mcjava.hfill": {} },
      { "back@settings_mcjava.back_button": { "$toggle_button_name": "navigation_tab", "size": [150, 20] } }
    ]
  },

  /* Content */

  "mouse_settings_button@toggle_mcjava.toggle_button": {
    "$toggle_button_name": "mouse_settings",
    "size": [150, 20],
    "$toggle_index": 1,
    "$toggle_button_text": "options.mouse_settings",
    "$toggle_control_name": "mouse_settings_view"
  },

  "auto_jump_toggle@toggle_mcjava.toggle": {
    "$toggle_text": "options.autoJump",
    "$toggle_binding_name": "#mouse_autoJump",
    "$toggle_enabled_binding_name": "#mouse_autojump_enabled",
    "$toggle_name": "mouse_autojump"
  },

  "popup_dialog_factory": {
    "type": "factory",
    "control_ids": {
      "modal_dialog_popup": "@popup_mcjava.reset_mouse_settings_modal"
    }
  },

  "mouse_settings@mouse_settings_mcjava.mouse_settings_content_panel": {
    "bindings": [
      {
        "binding_type": "view",
        "source_control_name": "mouse_settings_view",
        "source_property_name": "#toggle_state",
        "target_property_name": "#visible"
      }
    ]
  },


  "mouse_keymapping_item": {
    "type": "panel",
    "layer": 1,
    "size": [ "100%", 20 ],
    "anchor_from": "top_left",
    "anchor_to": "top_left",
    "controls": [
      {
        "option_info_label_control": {
          "type": "panel",
          "size": [ "100%", "100%" ],
          "anchor_from": "top_left",
          "anchor_to": "top_left",
          "controls": [
            {
              "keymapping_label_control": {
                "type": "label",
                "color": "white",
                "size": [ "100%", "default" ],
                "text_alignment": "left",
                "anchor_from": "left_middle",
                "anchor_to": "left_middle",
                "layer": 20,
                "text": "#keymapping_name",
                "bindings": [
                  {
                    "binding_name": "#keymapping_name",
                    "binding_type": "collection",
                    "binding_collection_name": "$keymapping_collection"
                  }
                ]
              }
            }
          ]
        }
      },
      {
        "keymapping_button_0@binding_button": {
          "$button_tts_header": "#audible_keymapping_name",
          "anchor_from": "top_right",
          "offset": [-88.5, 0],
          "anchor_to": "top_right",
          "bindings": [
            {
              "binding_type": "collection_details",
              "binding_collection_name": "$keymapping_collection"
            },
            {
              "binding_name":  "#audible_keymapping_name",
              "binding_type":  "collection",
              "binding_collection_name": "$keymapping_collection"
            }
          ]
        }
      },
      {
        "keymapping_button_1@mouse_mcjava.reset_binding_button": {
          "anchor_from": "top_right",
          "anchor_to": "top_right",
          "offset": [-27.5, 0],
          "$pressed_button_name": "button.reset_binding",
          "$button_tts_header": "accessibility.settings.reset"
        }
      }
    ]
  },

  "binding_button@button_mcjava.button": {
    "size": [75, 20],
    "$pressed_button_name": "button.binding_button",
    "$button_content": "mouse_mcjava.binding_button_content",
    "bindings": [
      {
        "binding_type": "collection_details",
        "binding_collection_name": "$keymapping_collection"
      }
    ]
  },

  "binding_button_content@common_buttons.button_content_panel": {
    "$button_offset": [0, 0],
    "controls": [
      {
        "default_label@common.new_button_label": {
          "text": "#binding_button_text",
          "tts_override_control_value": " ",
          "color": [0.99, 0.99, 0.99],
          "shadow": true,
          "bindings": [
            {
              "binding_name": "#binding_button_text",
              "binding_condition": "none",
              "binding_type": "collection",
              "binding_collection_name": "$keymapping_collection"
            }
          ]
        }
      }
    ]
  },
  
  "reset_binding_button@button_mcjava.button": {
    "layer": 1,
    "size": [50, 20],
    "$button_text": "controls.reset",
    "$pressed_button_name": "button.reset_binding",
    "bindings": [
      {
        "binding_type": "collection_details",
        "binding_collection_name": "$keymapping_collection"
      }
    ]
  },

  "reset_button@button_mcjava.action_button": {
    "$pressed_button_name": "button.reset_keyboard_bindings",
    "$button_text": "controls.resetAll",
    "size": [150, 20]
  }
}