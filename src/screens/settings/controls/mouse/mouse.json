{
  "namespace": "mouse_mcjava",

  "mouse_content_panel": {
    "type": "panel",
    "controls": [
      {
        "mouse_content_panel@common_mcjava.scroll_screen": {
          "$top_content": "mouse_mcjava.top_content",
          "$top_content_size": ["100%", 44],
          "$scrolling_content": "mouse_mcjava.scroll_content",
          "$bottom_content": "mouse_mcjava.bottom_content",
          "$popup_factory": "mouse_mcjava.popup_dialog_factory",
          "bindings": [
            {
              "binding_type": "view",
              "source_control_name": "mouse_settings_view",
              "source_property_name": "(not #toggle_state)",
              "target_property_name": "#visible"
            }
          ]
        }
      },
      { "mouse_settings@mouse_mcjava.mouse_settings": {} }
    ]
  },

  "top_content": {
    "type": "panel",
    "controls": [
      { "title@common_mcjava.title": { "offset": [0, 7], "text": "options.controls.title" } },
      {
        "stack_zero": {
          "type": "stack_panel",
          "orientation": "horizontal",
          "anchor_from": "top_middle",
          "anchor_to": "top_middle",
          "size": [ 310, 20],
          "offset": [ 0,18 ],
          "controls": [
            { "mouse_settings@mouse_mcjava.mouse_settings_button": {} },
            { "fill@common_mcjava.hfill": {} },
            { "auto_jump@mouse_mcjava.auto_jump_toggle": { "size": [150, 20] } }
          ]
        }
      }
    ]
  },

