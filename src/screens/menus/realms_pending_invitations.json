{
  "namespace": "realms_pending_invitations_mcjava",

  "realms_invitation_screen_content_panel@common_mcjava.scroll_screen": {
    "$top_content": "realms_pending_invitations_mcjava.top_content",
    "$scrolling_content": "realms_pending_invitations_mcjava.scroll_content",
    "$bottom_content": "realms_pending_invitations_mcjava.bottom_content",
    "$bottom_content_size": ["100%", 60],
    "$dirt_scroll": true
  },

  "top_content": {
    "type": "panel",
    "controls": [
      { "title@common_mcjava.title": { "offset": [0, 4], "text": "Realms Pending Invitations" } }
    ]
  },

  "scroll_content": {
    "type": "stack_panel",
    "size": [270, "100%c" ],
    "anchor_from": "top_middle",
    "anchor_to": "top_middle",
    "controls": [
      {
        "upper_padding": {
          "type": "panel",
          "size": [ "100%", 1 ]
        }
      },
      { "gig@realms_pending_invitations.gamertag_item_grid": {} },
      {
        "lower_padding": {
          "type": "panel",
          "size": [ "100%", 2 ]
        }
      },
      { "nil@realms_pending_invitations.no_invites_label_wrapper": {} }
    ]
  },

  "bottom_content": {
    "type": "panel",
    "size": ["100%", 20],
    "anchor_from": "center",
    "anchor_to": "center",
    "controls": [
      { "show_friends_only@show_friends_only_toggle": { "offset": [-80, 0], "size": [150, 20] } },
      { "exit@common_mcjava.exit_button": { "offset": [80, 0], "size": [150, 20], "$button_text": "gui.cancel" } }
    ]
  },

  /* Content */

  "gamertag_item_grid": {
    "type": "grid",
    "grid_item_template": "realms_pending_invitations_mcjava.gamertag_item",
    "grid_dimension_binding": "#gamertag_item_grid_dimension",
    "collection_name": "pending_invites_collection",
    "anchor_to": "top_left",
    "anchor_from": "top_left",
    "size": [ "100%", "default" ],
    "bindings": [
      {
        "binding_name": "#gamertag_item_grid_dimension",
        "binding_type": "global"
      }
    ]
  },

  "gamertag_item": {
    "type": "panel",
    "size": ["100%", 36],
    "controls": [
      { "@realms_pending_invitations.gamertag_item_content": {} }
    ]
  },

  "gamertag_item_content": {
    "type": "panel",
    "controls": [
      { "lb@realms_pending_invitations.tts_gamertag_item_info_wrapper": {} },
      { "a@realms_pending_invitations.realm_accept_button": {} },
      { "d@realms_pending_invitations.realm_decline_button": {} },
      { "ap@realms_pending_invitations.realm_accepted_panel": {} }
    ]
  },

  "show_friends_only_toggle@toggle_mcjava.toggle": {
    "$toggle_name": "#hide_invites",
    "$toggle_state_binding_name": "#invite_toggle_state",
    "$toggle_text": "Only Show Friends"
  }
}