{
  "namespace": "emote_wheel_mcjava",

  "emote_wheel_screen_content_panel": {
    "type": "panel",
    "size": [ "100%y", "85%" ],
    "controls": [
      {
        "emote_name@persona.emote_label": {
          "size": [ 56, 35 ],
          "offset": [ 2, 9 ],
          "text": "#emote_name",
          "layer": 10,
          "shadow": true,
          "bindings": [
            {
              "binding_name": "#emote_name",
              "binding_condition": "always"
            }
          ]
        }
      },
      { "content_panel@emote_wheel_mcjava.content_panel": {} },
      { "dressing_room_button@emote_wheel_mcjava.dressing_room_button": {} },
      { "gamepad_helpers@emote_wheel_mcjava.gamepad_helpers": {} }
    ]
  },

  "root_panel@common_dialogs.main_panel": {
    "controls": [
      {
        "emote_wheel@persona.selection_wheel": {
          "size": [ 185, 172 ],
          "inner_radius": 0.35,
          "outer_radius": 1.0,
          "$slice_count": 6,
          "$button_name": "button.emote_selected",
          "controls": [
            {
              "default_state@persona.wheel_state": {
                "texture": "textures/ui/emote_wheel_base"
              }
            },
            {
              "state_0@persona.wheel_state": {
                "texture": "textures/ui/emote_wheel_select_0"
              }
            },
            {
              "image_0@persona.emote_image": {
                "offset": [ -31, -52 ],
                "$property_bag": {
                  "#index": 0
                }
              }
            },
            {
              "touch_label_0@persona.touch_name_label": {
                "offset": [ -102, -54 ],
                "text_alignment": "right",
                "property_bag": {
                  "#index": 0
                }
              }
            },
            {
              "state_1@persona.wheel_state": {
                "texture": "textures/ui/emote_wheel_select_1"
              }
            },
            {
              "image_1@persona.emote_image": {
                "offset": [ -62, 0 ],
                "$property_bag": {
                  "#index": 1
                }
              }
            },
            {
              "touch_label_1@persona.touch_name_label": {
                "offset": [ -132, 0 ],
                "text_alignment": "right",
                "property_bag": {
                  "#index": 1
                }
              }
            },
            {
              "state_2@persona.wheel_state": {
                "texture": "textures/ui/emote_wheel_select_2"
              }
            },
            {
              "image_2@persona.emote_image": {
                "offset": [ -31, 52 ],
                "$property_bag": {
                  "#index": 2
                }
              }
            },
            {
              "touch_label_2@persona.touch_name_label": {
                "offset": [ -103, 54 ],
                "text_alignment": "right",
                "property_bag": {
                  "#index": 2
                }
              }
            },
            {
              "state_3@persona.wheel_state": {
                "texture": "textures/ui/emote_wheel_select_3"
              }
            },
            {
              "image_3@persona.emote_image": {
                "offset": [ 31, 52 ],
                "$property_bag": {
                  "#index": 3
                }
              }
            },
            {
              "touch_label_3@persona.touch_name_label": {
                "offset": [ 102, 54 ],
                "property_bag": {
                  "#index": 3
                }
              }
            },
            {
              "state_4@persona.wheel_state": {
                "texture": "textures/ui/emote_wheel_select_4"
              }
            },
            {
              "image_4@persona.emote_image": {
                "offset": [ 62, 0 ],
                "$property_bag": {
                  "#index": 4
                }
              }
            },
            {
              "touch_label_4@persona.touch_name_label": {
                "offset": [ 133, 0 ],
                "property_bag": {
                  "#index": 4
                }
              }
            },
            {
              "state_5@persona.wheel_state": {
                "texture": "textures/ui/emote_wheel_select_5"
              }
            },
            {
              "image_5@persona.emote_image": {
                "offset": [ 31, -52 ],
                "$property_bag": {
                  "#index": 5
                }
              }
            },
            {
              "touch_label_5@persona.touch_name_label": {
                "offset": [ 102, -54 ],
                "property_bag": {
                  "#index": 5
                }
              }
            }
          ],
          "state_controls": [
            "default_state",
            "state_0",
            "state_1",
            "state_2",
            "state_3",
            "state_4",
            "state_5"
          ]
        }
      }
    ]
  },

  "dressing_room_button@button_mcjava.button": {
    "$pressed_button_name": "button.dressing_room",
    "size": [150, 23],
    "offset": [0, 120],
    "anchor_from": "center",
    "anchor_to": "center",
    "$button_text": "emotes.change_emotes",
    "$default_text_color": "$light_button_default_text_color",
    "$font_type": "MinecraftTen",
    "$new_ui_label_offset": [ 0, -2 ],
    "bindings": [
      {
        "binding_name": "(not #is_using_gamepad)",
        "binding_name_override": "#visible"
      }
    ]
  },

  "gamepad_helpers@common.empty_panel": {
    "type": "stack_panel",
    "orientation": "horizontal",
    "anchor_from": "bottom_middle",
    "anchor_to": "bottom_middle",
    "size": [ "100%c", "100%c" ],
    "offset": [ 0, 60 ],
    "controls": [
      { "gamepad_y@common.gamepad_helper_y": {} },
      { "gamepad_b@common.gamepad_helper_b": {} },
      { "gamepad_ls@common.gamepad_helper_thumbstick_left": {} },
      { "gamepad_a@common.gamepad_helper_a": {} }
    ]
  },

  "touch_name_label": {
    "type": "label",
    "size": [ 75, 22 ],
    "text_alignment": "left",
    "text": "#text",
    "shadow": true,
    "color": "white",
    "bindings": [
      {
        "binding_name": "#is_touch_mode",
        "binding_name_override": "#visible"
      },
      {
        "binding_name": "#emote_name_touch",
        "binding_name_override": "#text",
        "binding_condition": "always"
      }
    ]
  },

  "emote_image@common.empty_panel": {
    "layer": 2,
    "size": [ "100%c", "100%c" ],
    "controls": [
      {
        "valid": {
          "type": "image",
          "texture": "#texture",
          "size": [ 42, 42 ],
          "property_bag": "$property_bag",
          "bindings": [
            {
              "binding_name": "#emote_image",
              "binding_name_override": "#texture",
              "binding_condition": "always"
            },
            {
              "binding_name": "#emote_image_file_system",
              "binding_name_override": "#texture_file_system",
              "binding_condition": "always"
            },
            {
              "binding_name": "#emote_image_tint",
              "binding_name_override": "#color",
              "binding_condition": "always"
            },
            {
              "binding_name": "#emote_is_valid",
              "binding_name_override": "#visible",
              "binding_condition": "always"
            }
          ]
        }
      }
    ]
  },

  "emote_label": {
    "ignored": "(not #visible)",
    "type": "label",
    "size": [ "100%", 17 ],
    "text_alignment": "center",
    "color": "white"
  }
}