{
  "namespace": "world_preferences_mcjava",

  "world_preferences_screen_content_panel": {
    "type": "panel",
    "controls": [
      { "title@common_mcjava.title": { "offset": [ 0, 19 ], "ignored": "$in_game", "text": "Create New World" } },
      { "title@common_mcjava.title": { "text": "Game Settings", "ignored": "(not $in_game)" } },
      { "content_panel@world_preferences_mcjava.content_panel": {} },
      { "bottom@world_create_mcjava.bottom_content": { "visible": "$is_world_create" } }
    ]
  },
   
  "content_panel": {
    "type": "stack_panel",
    "anchor_from": "center",
    "anchor_to": "top_middle",
    "size": [310, 195],
    "offset": [0, "-36%"],
    "controls": [
      {
        "stack_zero@common_mcjava.stack": {
          "controls": [
            { "@world_preferences_mcjava.respawn_radius": {} },
            { "fill@common_mcjava.hfill": {} },
            { "@world_preferences_mcjava.show_coordinates_toggle": {} }
          ]
        }
      },
      { "space_zero@common_mcjava.vspace": {} },
      {
        "stack_one@common_mcjava.stack": {
          "controls": [
            { "@world_preferences_mcjava.pvp_toggle": {} },
            { "fill@common_mcjava.hfill": {} },
            { "@world_preferences_mcjava.natural_regeneration_toggle": {} }
          ]
        }
      },
      { "space_one@common_mcjava.vspace": {} },
      {
        "stack_two@common_mcjava.stack": {
          "controls": [
            { "@world_preferences_mcjava.tnt_explodes_toggle": {} },
            { "fill@common_mcjava.hfill": {} },
            { "@world_preferences_mcjava.fire_spreads_toggle": {} }
          ]
        }
      },
      { "space_two@common_mcjava.vspace": {} },
      {
        "stack_three@common_mcjava.stack": {
          "controls": [
            { "@world_preferences_mcjava.mob_loot_toggle": {} },
            { "fill@common_mcjava.hfill": {} },
            { "@world_preferences_mcjava.tile_drops_toggle": {} }
          ]
        }
      },
      { "space_three@common_mcjava.vspace": {} },
      {
        "stack_four@common_mcjava.stack": {
          "controls": [
            { "@world_preferences_mcjava.immediate_respawn_toggle": {} },
            { "fill@common_mcjava.hfill": {} },
            { "@world_preferences_mcjava.server_sim_distance_slider": {} }
          ]
        }
      },
      { "space_four@common_mcjava.vspace": { "size": [0, 8] } },
      {
        "stack_five@common_mcjava.stack": {
          "controls": [
            { "fill@common_mcjava.hfill": {} },
            { "@world_create_mcjava.back_button": { "$toggle_button_name": "world_preferences" } },
            { "fill@common_mcjava.hfill": {} }
          ]
        }
      }
    ]
  },

  /* Content */

  "pvp_toggle@toggle_mcjava.toggle": {
    "$tts_section_header": "createWorldScreen.worldSettings",
    "$toggle_text": "createWorldScreen.pvp",
    "$toggle_binding_name": "#pvp",
    "$toggle_enabled_binding_name": "#pvp_enabled",
    "$toggle_name": "pvp",
    "$toggle_binding_condition": "always_when_visible"
  },

  "show_coordinates_toggle@toggle_mcjava.toggle": {
    "$tts_section_header": "createWorldScreen.worldSettings",
    "$toggle_text": "createWorldScreen.showCoordinates",
    "$toggle_binding_name": "#show_coordinates",
    "$toggle_enabled_binding_name": "#show_coordinates_enabled",
    "$toggle_name": "show_coordinates",
    "$toggle_binding_condition": "always_when_visible"
  },

  "fire_spreads_toggle@toggle_mcjava.toggle": {
    "$tts_section_header": "createWorldScreen.worldSettings",
    "$toggle_text": "createWorldScreen.fireSpreads",
    "$toggle_binding_name": "#fire_spreads",
    "$toggle_enabled_binding_name": "#fire_spreads_enabled",
    "$toggle_name": "fire_spreads",
    "$toggle_binding_condition": "always_when_visible"
  },

  "tnt_explodes_toggle@toggle_mcjava.toggle": {
    "$tts_section_header": "createWorldScreen.worldSettings",
    "$toggle_text": "createWorldScreen.tntexplodes",
    "$toggle_binding_name": "#tnt_explodes",
    "$toggle_enabled_binding_name": "#tnt_explodes_enabled",
    "$toggle_name": "tnt_explodes",
    "$toggle_binding_condition": "always_when_visible"
  },

  "mob_loot_toggle@toggle_mcjava.toggle": {
    "$tts_section_header": "createWorldScreen.worldSettings",
    "$toggle_text": "createWorldScreen.mobLoot",
    "$toggle_binding_name": "#mob_loot",
    "$toggle_enabled_binding_name": "#mob_loot_enabled",
    "$toggle_name": "mob_loot",
    "$toggle_binding_condition": "always_when_visible"
  },

  "natural_regeneration_toggle@toggle_mcjava.toggle": {
    "$tts_section_header": "createWorldScreen.worldSettings",
    "$toggle_text": "createWorldScreen.naturalregeneration",
    "$toggle_binding_name": "#natural_regeneration",
    "$toggle_enabled_binding_name": "#natural_regeneration_enabled",
    "$toggle_name": "natural_regeneration",
    "$toggle_binding_condition": "always_when_visible"
  },

  "tile_drops_toggle@toggle_mcjava.toggle": {
    "$tts_section_header": "createWorldScreen.worldSettings",
    "$toggle_text": "createWorldScreen.tileDrops",
    "$toggle_binding_name": "#tile_drops",
    "$toggle_enabled_binding_name": "#tile_drops_enabled",
    "$toggle_name": "tile_drops",
    "$toggle_binding_condition": "always_when_visible"
  },

  "immediate_respawn_toggle@toggle_mcjava.toggle": {
    "$tts_section_header": "createWorldScreen.worldSettings",
    "$toggle_text": "createWorldScreen.immediaterespawn",
    "$toggle_binding_name": "#immediaterespawn",
    "$toggle_enabled_binding_name": "#immediaterespawn_enabled",
    "$toggle_name": "doimmediaterespawn",
    "$toggle_binding_condition": "always_when_visible"
  },

  "respawn_radius@text_input_mcjava.text_input_with_label": {
    "size": [152, 35],
    "$input_box_offset": [-1, -14],
    "$input_label_offset": [0, -14],
    "$input_label": "createWorldScreen.respawnRadius",
    "$input_binding_name": "#respawn_radius",
    "$input_enabled_binding_name": "#respawn_radius_enabled",
    "$text_input_name": "respawn_radius_text_box",
    "$text_max_length": 8,
    "$text_input_text_type": "NumberChars"
  },

  "server_sim_distance_slider@slider_mcjava.slider": {
    "$tts_section_header": "createWorldScreen.worldPreferences",
    "ignored": "($is_holographic)",
    "$slider_text": "#server_sim_distance_slider_label",
    "$slider_name": "server_sim_distance",
    "$slider_value_binding_name": "#server_sim_distance",
    "$slider_enabled_binding_name": "#server_sim_distance_enabled",
    "$slider_tts_text_value": "#server_sim_distance_text_value",
    "$slider_steps_binding_name": "#server_sim_distance_steps",
    "$slider_text_bindings": [
      {
        "binding_name": "$slider_text"
      }
    ]
  }
}