{
  "namespace": "world_cheats_mcjava",

  "world_cheats_screen_content_panel": {
    "type": "panel",
    "controls": [
      { "title@common_mcjava.title": { "offset": [ 0, 19 ], "ignored": "$in_game", "text": "Create New World" } },
      { "title@common_mcjava.title": { "text": "Game Settings", "ignored": "(not $in_game)" } },
      { "content_panel@world_cheats_mcjava.content_panel": {} },
      { "bottom@world_create_mcjava.bottom_content": { "visible": "$is_world_create" } }
    ]
  },

  "content_panel": {
    "type": "stack_panel",
    "anchor_from": "center",
    "anchor_to": "top_middle",
    "size": [ 310, 195],
    "offset": [ 0, "-36%" ],
    "controls": [
      {
        "panel@common_mcjava.panel": {
          "size": [310, 35],
          "controls": [
            { "@world_cheats_mcjava.random_tick_speed_box": {} }
          ]
        }
      },
      { "fill@common_mcjava.vspace": { "size": [0, 8] } },
      {
        "stack_zero@common_mcjava.stack": {
          "ignored": "$education_edition",
          "controls": [
            { "@world_cheats_mcjava.always_day_toggle": {} },
            { "fill@common_mcjava.hfill": {} },
            { "@world_cheats_mcjava.daylight_cycle_toggle": {} }
          ]
        }
      },
      { "space_zero@common_mcjava.vspace": {} },
      {
        "stack_one@common_mcjava.stack": {
          "ignored": "$education_edition",
          "controls": [
            { "@world_cheats_mcjava.weather_cycle_toggle": {} },
            { "fill@common_mcjava.hfill": {} },
            { "@world_cheats_mcjava.keep_inventory_toggle": {} }
          ]
        }
      },
      { "space_zero@common_mcjava.vspace": {} },
      {
        "stack_two@common_mcjava.stack": {
          "ignored": "$education_edition",
          "controls": [
            { "@world_cheats_mcjava.mob_spawn_toggle": {} },
            { "fill@common_mcjava.hfill": {} },
            { "@world_cheats_mcjava.mob_griefing_toggle": {} }
          ]
        }
      },
      { "space_zero@common_mcjava.vspace": {} },
      {
        "stack_three@common_mcjava.stack": {
          "ignored": "$education_edition",
          "controls": [
            { "@world_cheats_mcjava.command_blocks_enabled_toggle": {} },
            { "fill@common_mcjava.hfill": {} },
            { "@world_cheats_mcjava.entities_drop_loot_toggle": {} }
          ]
        }
      },
      { "space_zero@common_mcjava.vspace": {} },
      {
        "stack_four@common_mcjava.stack": {
          "ignored": "$education_edition",
          "controls": [
            { "@world_cheats_mcjava.education_toggle": {} },
            { "fill@common_mcjava.hfill": {} }
          ]
        }
      },
      //Education Education Boxes
      { "space_zero@common_mcjava.vspace": { "size": [0, 8]} },
      {
        "stack_five@common_mcjava.stack": {
          "controls": [
            { "fill@common_mcjava.hfill": {} },
            { "back@world_create_mcjava.back_button": { "$toggle_button_name": "world_cheats" } },
            { "fill@common_mcjava.hfill": {} }
          ]
        }
      }
    ]
  },

  /* Content */

  "random_tick_speed_box@text_input_mcjava.text_input_with_label_and_action_button": {
    "$input_label": "createWorldScreen.randomtickspeed",
    "$input_binding_name": "#random_tick_speed",
    "$input_enabled_binding_name": "#random_tick_speed_enabled",
    "$text_max_length": 4,
    "$text_input_text_type": "NumberChars",
    "$text_input_name": "random_tick_speed_text_box",
    "$button_content": "world_cheats_mcjava.reset_image",
    "$pressed_button_name": "reset_random_tick_speed"
  },

  "reset_image": {
    "type": "image",
    "size": [ 20, 20],
    "anchor_from": "center",
    "anchor_to": "center",
    "texture": "src/assets/img/reset",
    "layer": 10
  },

  "education_toggle@toggle_mcjava.toggle": {
    "$tts_section_header": "createWorldScreen.cheatSettings",
    "$toggle_text": "createWorldScreen.educationtoggle",
    "$toggle_binding_name": "#education_toggle",
    "$toggle_enabled_binding_name": "#education_toggle_enabled",
    "$toggle_name": "education_toggle"
  },

