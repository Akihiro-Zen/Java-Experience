{
  "namespace": "world_create_mcjava",

  "world_create_screen_content_panel": {
    "type": "panel",
    "controls": [
      {
        "world_create@world_create_mcjava.world_create_content_panel": {
          "bindings": [
            {
              "binding_type": "view",
              "source_control_name": "more_create_options_view",
              "source_property_name": "(not #toggle_state)",
              "target_property_name": "#visible"
            }
          ]
        }
      },
      { "more_create_options@world_create_mcjava.more_create_options_screen": {} }
    ]
  },

  "world_create_content_panel": {
    "type": "panel",
    "controls": [
      { "title@common_mcjava.title": { "offset": [ 0, 19 ], "text": "Create New World" } },
      { "content@world_create_mcjava.world_create_content": {} },
      { "bottom@world_create_mcjava.bottom_content": {} }
    ]
  },

  "world_create_content": {
    "type": "stack_panel",
    "anchor_from": "center",
    "anchor_to": "top_middle",
    "size": [200, 195],
    "offset": [0, "-36%"],
    "controls": [
      {
        "panel_zero@common_mcjava.panel": {
          "size": ["100%", 35],
          "controls": [
            { "world_name@world_create_mcjava.world_name_box": {} }
          ]
        }
      },
      { "space_zero@common_mcjava.vspace": { "size": [0, 4] } },
      {
        "panel_one@common_mcjava.panel": {
          "type": "panel",
          "size": ["100%", 12],
          "controls": [
            { "world_name_save@world_create_mcjava.save_world_name_panel": {} }
          ]
        }
      },
      { "space_one@common_mcjava.vspace": { "size": [0, 20] } },
      { "game_mode@world_create_mcjava.game_mode_panel": {} },
      { "game_mode_info@world_create_mcjava.gamemode_info_panel": {} },
      { "space_three@common_mcjava.vspace": { "size": [0, 31] } },
      {
        "panel_two@common_mcjava.panel": {
          "controls": [
            { "@world_create_mcjava.more_create_options_button": {} }
          ]
        }
      },
      { "fill@common_mcjava.hfill": { "size": [0, "fill"] } }
    ]
  },

  "bottom_content@common_mcjava.stack": {
    "size": [310, 20],
    "anchor_from": "bottom_middle",
    "anchor_to": "bottom_middle",
    "offset": [ 0, -8 ],
    "controls": [
      { "create_world@world_create_mcjava.create_world_button": {} },
      { "fill@common_mcjava.hfill": {} },
      { "cancel@common_mcjava.exit_button": { "$button_text": "gui.cancel", "size": [150, 20] } }
    ]
  },

  /* Content */

  "popup_dialog_factory": {
    "type": "factory",
    "control_ids": {
      "modal_dialog_popup": "@popup_dialog.modal_dialog_popup",
      "storage_dependency_popup": "@storage_management_popup.storage_dependency_modal",
      "storage_sharing_popup": "@storage_management_popup.sharing_popup_content"
    }
  },

  "world_name_box@text_input_mcjava.text_input_with_label": {
    "$input_label": "selectWorld.enterName",
    "$input_binding_name": "#world_name",
    "$input_enabled_binding_name": "#world_name_enabled",
    "$text_input_name": "world_name_text_box",
    "$allow_data_binding": false
  },

  /* For Save World Name with */

  "world_name_boxview@text_input_mcjava.text_inputview_with_label": {
    "$input_label": "selectWorld.enterName",
    "$placeholder_text": "New World",
    "$input_binding_name": "#world_name",
    "$input_enabled_binding_name": "#world_name_enabled",
    "$text_input_name": "world_name_text_box",
    "$focus_override_right": "FOCUS_OVERRIDE_STOP",
    "$allow_data_binding": false
  },

  "save_world_name_panel@common_mcjava.stack": {
    "ignored": "$is_template",
    "size": [202, 12],
    "controls": [
      {
        "result": {
          "type": "label",
          "text": "selectWorld.resultFolder",
          "color": "$header_information_text_color",
          "shadow": true
        }
      },
      { "world_name@world_create_mcjava.world_name_boxview": { "offset": [-1, 0]} },
      { "fill@common_mcjava.hfill": {} }
    ]
  },

  /* #Ended */

  "game_mode_panel@button_mcjava.radio_group_panel": {
    "size": ["100%", 20],
    "$toggle_enabled_binding_name": "#world_game_mode_dropdown_enabled",
    "$radio_button_text": "selectWorld.gameMode",
    "controls": [
      {
        "survival@button_mcjava.radio_group_button": {
          "size": [150, 20],
          "$radio_action_text": "selectWorld.gameMode.survival",
          "$this_action": "#world_game_mode_radio_survival",
          "$next_action": "#world_game_mode_radio_creative"
        }
      },
      {
        "creative@button_mcjava.radio_group_button": {
          "size": [150, 20],
          "$radio_action_text": "selectWorld.gameMode.creative",
          "$this_action": "#world_game_mode_radio_creative",
          "$next_action": "#world_game_mode_radio_survival"
        }
      }
    ]
  },

  "gamemode_info_panel": {
    "type": "stack_panel",
    "size": ["100%", "100%c"],
    "controls": [
      {
        "survival@world_create_mcjava.gamemode_info": {
          "$game_mode_name": "survival",
          "$visible": "#world_game_mode_radio_survival"
        }
      },
      {
        "creative@world_create_mcjava.gamemode_info": {
          "$game_mode_name": "creative",
          "$visible": "#world_game_mode_radio_creative"
        }
      }
    ]
  },

  "more_create_options_button@toggle_mcjava.toggle_button": {
    "$toggle_button_name": "more_create_options",
    "$toggle_index": 1,
    "$toggle_button_text": "selectWorld.moreWorldOptions",
    "$toggle_control_name": "more_create_options_view"
  },

  "create_world_button@button_mcjava.action_button": {
    "size": [150, 20],
    "default_focus_precedence": 1,
    "$button_text": "Create New World",
    "$pressed_button_name": "create_world_button"
  },

  "gamemode_info": {
    "type": "stack_panel",
    "size": ["100%", "100%c"],
    "$visible|default": "",
    "bindings": [
      {
        "binding_name": "$visible",
        "binding_name_override": "#visible"
      }
    ],
    "controls": [
      {
        "first_line@world_create_mcjava.info_line_panel": {
          "$text": "('selectWorld.gameMode.' + $game_mode_name + '.line1')"   
        }
      },
      { "space@common_mcjava.vspace": { "size": [0, 2] } },
      {
        "second_line@world_create_mcjava.info_line_panel": {
          "$text": "('selectWorld.gameMode.' + $game_mode_name + '.line2')"  
        }
      }
    ]
  },

  "info_line_panel": {
    "type": "panel",
    "size": ["100%", "10px"],
    "controls": [
      {
        "info_line": {
          "type": "label",
          "text": "$text",
          "color": "$header_information_text_color",
          "shadow": true,
          "text_alignment": "center"
        }
      }
    ]
  },

  "more_create_options_screen@more_create_options_mcjava.more_create_options_screen_content_panel": {
    "bindings": [
      {
        "binding_type": "view",
        "source_control_name": "more_create_options_view",
        "source_property_name": "#toggle_state",
        "target_property_name": "#visible"
      }
    ]
  },

  "back_button@toggle_mcjava.toggle_button": {
    "size": [200, 20],
    "$toggle_index": 0,
    "$toggle_button_text": "gui.done",
    "$cancel_mapping": true,
    "$control_name": ""
  }
}